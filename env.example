# Core application settings
APP_BASE_URL=http://localhost:3000
APP_VERSION=dev
TIMEZONE=America/Los_Angeles

# Database configuration (optional if DATABASE_URL is set)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/member_manager_development

# Redis configuration (for Sidekiq background jobs)
REDIS_URL=redis://localhost:6379/0

# Authentik (OIDC + API)
AUTHENTIK_ISSUER=https://auth.example.com/application/o/member-manager/
AUTHENTIK_CLIENT_ID=your-client-id
AUTHENTIK_CLIENT_SECRET=your-client-secret
AUTHENTIK_REDIRECT_URI=http://localhost:3000/auth/authentik/callback
AUTHENTIK_API_BASE_URL=https://auth.example.com
AUTHENTIK_API_TOKEN=your-api-token
AUTHENTIK_GROUP_ID=your-group-id
AUTHENTIK_GROUP_PAGE_SIZE=200

# Local authentication (development/testing only)
LOCAL_AUTH_ENABLED=true
LOCAL_AUTH_EMAIL=admin@example.com
LOCAL_AUTH_PASSWORD=changeme
LOCAL_AUTH_FULL_NAME=Local Admin

# Slack integration
SLACK_API_TOKEN=xoxb-your-slack-token
SLACK_API_BASE_URL=https://slack.com/api
SLACK_USER_PAGE_LIMIT=200

# Google Sheets integration
GOOGLE_SHEETS_CREDENTIALS='{"type":"service_account","project_id":"example",...}'
GOOGLE_SHEETS_ID=your-spreadsheet-id

# PayPal integration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_API_BASE_URL=https://api-m.paypal.com
PAYPAL_TRANSACTIONS_LOOKBACK_DAYS=30

# Recharge integration
RECHARGE_API_KEY=your-recharge-api-key
RECHARGE_API_BASE_URL=https://api.rechargeapps.com
RECHARGE_TRANSACTIONS_LOOKBACK_DAYS=30

