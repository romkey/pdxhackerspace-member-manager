<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Sheet Entries</h1>
    <p class="text-muted mb-0">
      <strong><%= @entry_count %></strong> rows —
      <strong><%= @with_email_count %></strong> have an email address,
      <strong><%= @shared_email_count %></strong> share Authentik emails,
      <strong><%= @shared_name_count %></strong> share Authentik names —
      <strong><%= @paying_count %></strong> paying,
      <strong><%= @sponsored_count %></strong> sponsored,
      <strong><%= @inactive_count %></strong> inactive
    </p>
  </div>
  <div class="d-flex gap-2">
    <%= button_to "Sync now", sync_sheet_entries_path, method: :post, class: "btn btn-primary", data: { turbo: false } %>
    <%= button_to "Sync to Members", sync_to_users_sheet_entries_path, method: :post, class: "btn btn-outline-primary", data: { turbo: false } %>
    <%= link_to "Test", test_sheet_entries_path, class: "btn btn-outline-secondary", data: { turbo: false } %>
  </div>
</div>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <div class="d-flex gap-2">
      <input type="text" id="sheet_search" class="form-control" placeholder="Search by name, email, status, payment, or access…" autocomplete="off">
      <button type="button" id="clear_sheet_search" class="btn btn-outline-secondary" style="display: none;">Clear</button>
    </div>
  </div>
</div>

<div class="card shadow-sm border-0">
  <div class="table-responsive">
    <table class="table mb-0 align-middle">
      <thead class="bg-body-tertiary">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Status</th>
          <th scope="col">Payment</th>
          <th scope="col">Access</th>
          <th scope="col">Last synced</th>
        </tr>
      </thead>
      <tbody id="sheet_entries_table_body">
        <% @sheet_entries.each do |entry| %>
          <tr class="sheet-entry-row" 
              data-search-text="<%= [
                entry.name,
                entry.email,
                entry.status.presence || "inactive",
                entry.payment,
                entry.access_permissions.join(" ")
              ].compact.join(' ').downcase %>">
            <td class="fw-semibold"><%= link_to entry.name, sheet_entry_path(entry) %></td>
            <td><%= entry.email ? mail_to(entry.email) : content_tag(:span, "Not provided", class: "text-muted fst-italic") %></td>
            <td><%= entry.status.presence || content_tag(:span, "Inactive", class: "text-muted") %></td>
            <td><%= entry.payment.presence || content_tag(:span, "—", class: "text-muted") %></td>
            <td>
              <% if entry.access_permissions.any? %>
                <span class="badge text-bg-info text-wrap"><%= entry.access_permissions.join(", ") %></span>
              <% else %>
                <span class="text-muted fst-italic">None recorded</span>
              <% end %>
            </td>
            <td><%= entry.last_synced_at ? l(entry.last_synced_at, format: :long) : "Never" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
  (function() {
    const searchInput = document.getElementById('sheet_search');
    const clearButton = document.getElementById('clear_sheet_search');
    const tableBody = document.getElementById('sheet_entries_table_body');
    
    if (!searchInput || !tableBody) return;
    
    function filterEntries() {
      const searchTerm = searchInput.value.toLowerCase().trim();
      const rows = tableBody.querySelectorAll('.sheet-entry-row');
      
      rows.forEach(function(row) {
        const searchText = row.getAttribute('data-search-text');
        if (searchText && searchText.includes(searchTerm)) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
      
      // Show/hide clear button
      if (clearButton) {
        if (searchTerm !== '') {
          clearButton.style.display = '';
        } else {
          clearButton.style.display = 'none';
        }
      }
    }
    
    searchInput.addEventListener('input', filterEntries);
    
    if (clearButton) {
      clearButton.addEventListener('click', function() {
        searchInput.value = '';
        filterEntries();
        searchInput.focus();
      });
    }
  })();
</script>

