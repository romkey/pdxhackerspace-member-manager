<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Access Logs</h1>
    <p class="text-muted mb-0">
      <strong><%= @display_count %></strong> log entries
      <% if @filter_active %>(filtered from <%= @total_count %> total)<% end %>
      <% if @total_pages > 1 %>
        &mdash; page <%= @page %> of <%= @total_pages %>
      <% end %>
    </p>
  </div>
  <div class="d-flex gap-2">
    <%= button_to "Sync Access Logs", import_access_logs_path, method: :post, class: "btn btn-outline-primary", data: { turbo: false } %>
    <%= link_to "Generate users.json", generate_users_json_access_logs_path, class: "btn btn-primary", data: { turbo: false } %>
  </div>
</div>

<% if @filter_active %>
  <div class="alert alert-info py-2 mb-3">
    <i class="bi bi-funnel me-1"></i> Filtering:
    <%= case params[:linked]
        when 'yes' then 'Linked'
        when 'no' then 'Unlinked (with name)'
        when 'no_name' then 'No name'
        when 'service' then 'Service Accounts'
        end %> entries
    &mdash; <%= link_to 'Clear filter', access_logs_path(q: params[:q]), class: 'alert-link' %>
  </div>
<% end %>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <p class="small text-muted mb-3"><i class="bi bi-hand-index me-1"></i> Click any badge to filter the list</p>
    <div class="d-flex flex-wrap gap-2 mb-3">
      <%= link_to access_logs_path(q: params[:q]), class: "badge text-bg-secondary text-decoration-none #{'border border-dark border-2' if !@filter_active}" do %>
        All: <strong><%= @total_count %></strong>
      <% end %>
      <%= link_to access_logs_path(linked: 'yes', q: params[:q]), class: "badge text-bg-success text-decoration-none #{'border border-dark border-2' if params[:linked] == 'yes'}" do %>
        Linked: <strong><%= @linked_count %></strong>
      <% end %>
      <%= link_to access_logs_path(linked: 'no', q: params[:q]), class: "badge text-bg-warning text-decoration-none #{'border border-dark border-2' if params[:linked] == 'no'}" do %>
        Unlinked: <strong><%= @unlinked_count %></strong>
      <% end %>
      <%= link_to access_logs_path(linked: 'no_name', q: params[:q]), class: "badge text-bg-secondary text-decoration-none #{'border border-dark border-2' if params[:linked] == 'no_name'}" do %>
        No name: <strong><%= @no_name_count %></strong>
      <% end %>
      <span class="border-start ms-2 ps-2"></span>
      <%= link_to access_logs_path(linked: 'service', q: params[:q]), class: "badge text-bg-info text-decoration-none #{'border border-dark border-2' if params[:linked] == 'service'}" do %>
        <i class="bi bi-gear-fill me-1"></i>Service: <strong><%= @service_account_count %></strong>
      <% end %>
    </div>
    <div class="d-flex gap-2">
      <input type="text" id="access_logs_search" class="form-control" placeholder="Search by name, location, or raw text…" autocomplete="off" value="<%= params[:q] %>">
      <button type="button" id="clear_access_logs_search" class="btn btn-outline-secondary" style="<%= params[:q].present? ? '' : 'display: none;' %>">Clear</button>
    </div>
  </div>
</div>

<div class="card shadow-sm border-0">
  <div class="table-responsive">
    <table class="table mb-0 align-middle">
      <thead class="bg-body-tertiary">
        <tr>
          <th scope="col">Timestamp</th>
          <th scope="col">User</th>
          <th scope="col">Location</th>
          <th scope="col">Action</th>
          <th scope="col">Raw Text</th>
          <th scope="col" class="text-end"></th>
        </tr>
      </thead>
      <tbody id="access_logs_table_body">
        <% if @access_logs.any? %>
          <% @access_logs.each do |log| %>
            <tr class="access-log-row" 
                data-search-text="<%= [
                  log.name,
                  log.user&.display_name,
                  log.location,
                  log.action,
                  log.raw_text
                ].compact.join(' ').downcase %>">
              <td>
                <% if log.logged_at.present? %>
                  <%= l(log.logged_at, format: :long) %>
                <% else %>
                  <span class="text-muted fst-italic">Not set</span>
                <% end %>
              </td>
              <td>
                <% if log.user.present? %>
                  <%= link_to log.user.display_name, user_path(log.user), class: "text-decoration-none" %>
                  <% if log.user.service_account? %>
                    <span class="badge text-bg-info ms-1"><i class="bi bi-gear-fill"></i></span>
                  <% end %>
                <% elsif log.name.present? %>
                  <span class="text-warning-emphasis"><%= log.name %></span>
                  <span class="badge text-bg-warning ms-1">unlinked</span>
                <% else %>
                  <span class="text-muted fst-italic">Unknown</span>
                <% end %>
              </td>
              <td><%= log.location.presence || content_tag(:span, "—", class: "text-muted") %></td>
              <td><%= log.action.presence || content_tag(:span, "—", class: "text-muted") %></td>
              <td>
                <% if log.raw_text.present? %>
                  <code class="small"><%= truncate(log.raw_text, length: 100) %></code>
                <% else %>
                  <span class="text-muted fst-italic">—</span>
                <% end %>
              </td>
              <td class="text-end text-nowrap">
                <% if log.user.blank? && log.name.present? %>
                  <button type="button" class="btn btn-sm btn-outline-primary"
                          data-bs-toggle="modal" data-bs-target="#linkUserModal"
                          data-log-id="<%= log.id %>" data-log-name="<%= log.name %>">
                    Link
                  </button>
                  <%= button_to "Create Member", create_member_access_log_path(log, linked: params[:linked], q: params[:q], page: params[:page]),
                      method: :post, class: "btn btn-sm btn-outline-success", data: { turbo: false,
                      turbo_confirm: "Create a new member '#{log.name}'?" } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="text-center text-muted py-4">No access logs found.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% if @total_pages > 1 %>
  <nav aria-label="Access logs pagination" class="mt-4">
    <ul class="pagination justify-content-center">
      <% page_params = { q: params[:q], linked: params[:linked] }.compact_blank %>
      <% if @page > 1 %>
        <li class="page-item">
          <%= link_to "Previous", access_logs_path(page_params.merge(page: @page - 1)), class: "page-link" %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">Previous</span>
        </li>
      <% end %>
      
      <% start_page = [@page - 2, 1].max %>
      <% end_page = [start_page + 4, @total_pages].min %>
      <% start_page = [end_page - 4, 1].max if end_page - start_page < 4 %>
      
      <% if start_page > 1 %>
        <li class="page-item">
          <%= link_to "1", access_logs_path(page_params.merge(page: 1)), class: "page-link" %>
        </li>
        <% if start_page > 2 %>
          <li class="page-item disabled">
            <span class="page-link">...</span>
          </li>
        <% end %>
      <% end %>
      
      <% (start_page..end_page).each do |page_num| %>
        <% if page_num == @page %>
          <li class="page-item active">
            <span class="page-link"><%= page_num %></span>
          </li>
        <% else %>
          <li class="page-item">
            <%= link_to page_num, access_logs_path(page_params.merge(page: page_num)), class: "page-link" %>
          </li>
        <% end %>
      <% end %>
      
      <% if end_page < @total_pages %>
        <% if end_page < @total_pages - 1 %>
          <li class="page-item disabled">
            <span class="page-link">...</span>
          </li>
        <% end %>
        <li class="page-item">
          <%= link_to @total_pages, access_logs_path(page_params.merge(page: @total_pages)), class: "page-link" %>
        </li>
      <% end %>
      
      <% if @page < @total_pages %>
        <li class="page-item">
          <%= link_to "Next", access_logs_path(page_params.merge(page: @page + 1)), class: "page-link" %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">Next</span>
        </li>
      <% end %>
    </ul>
  </nav>
<% end %>

<% if @all_users.present? %>
<!-- Link User Modal -->
<div class="modal fade" id="linkUserModal" tabindex="-1" aria-labelledby="linkUserModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="linkUserModalLabel">Link Access Log to User</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form id="linkUserForm" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="linked" value="<%= params[:linked] %>">
        <input type="hidden" name="q" value="<%= params[:q] %>">
        <input type="hidden" name="page" value="<%= @page %>">
        <div class="modal-body">
          <p class="mb-3">Linking access log entry for <strong id="linkLogName"></strong>. Other entries with the same name will also be linked, and the name will be added as an alias if it differs.</p>
          <div class="mb-3">
            <label for="link_user_search" class="form-label">Search Users</label>
            <input type="text" id="link_user_search" class="form-control mb-2" placeholder="Type to search users..." autocomplete="off">
          </div>
          <div class="mb-3">
            <label class="form-label">Select User</label>
            <div id="link_user_list" class="border rounded" style="max-height: 300px; overflow-y: auto;">
              <% @all_users.each do |user| %>
                <div class="link-user-item p-2 border-bottom" data-user-name="<%= user.display_name.downcase %>" style="cursor: pointer;">
                  <input type="radio" name="user_id" id="link_user_<%= user.id %>" value="<%= user.id %>" class="form-check-input me-2" required>
                  <label for="link_user_<%= user.id %>" class="form-check-label mb-0" style="cursor: pointer;">
                    <%= user.display_name %>
                    <% if user.email.present? %>
                      <span class="text-muted small ms-1">(<%= user.email %>)</span>
                    <% end %>
                  </label>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Link User</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  (function() {
    const modal = document.getElementById('linkUserModal');
    if (!modal) return;

    // When the modal is triggered, update the form action and display name
    modal.addEventListener('show.bs.modal', function(event) {
      const button = event.relatedTarget;
      const logId = button.getAttribute('data-log-id');
      const logName = button.getAttribute('data-log-name');

      document.getElementById('linkLogName').textContent = logName;
      document.getElementById('linkUserForm').action = '/access_logs/' + logId + '/link_user';

      // Reset search and selection
      const searchInput = document.getElementById('link_user_search');
      if (searchInput) searchInput.value = '';
      document.querySelectorAll('.link-user-item').forEach(function(item) {
        item.style.display = '';
      });
      const checked = modal.querySelector('input[name="user_id"]:checked');
      if (checked) checked.checked = false;
    });

    // User search filtering
    const searchInput = document.getElementById('link_user_search');
    if (searchInput) {
      searchInput.addEventListener('input', function() {
        const term = this.value.toLowerCase().trim();
        document.querySelectorAll('.link-user-item').forEach(function(item) {
          const name = item.getAttribute('data-user-name') || '';
          item.style.display = name.includes(term) ? '' : 'none';
        });
      });
    }

    // Click on row selects the radio
    document.querySelectorAll('.link-user-item').forEach(function(item) {
      item.addEventListener('click', function(e) {
        if (e.target.tagName !== 'INPUT') {
          const radio = this.querySelector('input[type="radio"]');
          if (radio) radio.checked = true;
        }
      });
    });
  })();
</script>
<% end %>

<script>
  (function() {
    const searchInput = document.getElementById('access_logs_search');
    const clearButton = document.getElementById('clear_access_logs_search');
    const tableBody = document.getElementById('access_logs_table_body');
    
    if (!searchInput || !tableBody) return;
    
    function filterLogs() {
      const searchTerm = searchInput.value.toLowerCase().trim();
      const rows = tableBody.querySelectorAll('.access-log-row');
      
      rows.forEach(function(row) {
        const searchText = row.getAttribute('data-search-text');
        if (searchText && searchText.includes(searchTerm)) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
      
      // Show/hide clear button
      if (clearButton) {
        if (searchTerm !== '') {
          clearButton.style.display = '';
        } else {
          clearButton.style.display = 'none';
        }
      }
    }
    
    searchInput.addEventListener('input', filterLogs);
    
    if (clearButton) {
      clearButton.addEventListener('click', function() {
        searchInput.value = '';
        filterLogs();
        searchInput.focus();
      });
    }
    
    // Initial filter if there's a value in the search box
    if (searchInput.value) {
      filterLogs();
    }
  })();
</script>

