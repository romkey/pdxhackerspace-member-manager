<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Edit <%= @payment_processor.name %></h1>
    <p class="text-muted mb-0">Update payment processor settings.</p>
  </div>
  <div>
    <%= link_to "Cancel", payment_processors_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card shadow-sm border-0">
      <div class="card-body">
        <%= form_with model: @payment_processor, local: true do |f| %>
          <% if @payment_processor.errors.any? %>
            <div class="alert alert-danger">
              <h5 class="alert-heading">Please fix the following errors:</h5>
              <ul class="mb-0">
                <% @payment_processor.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :display_order, class: "form-label" %>
            <%= f.number_field :display_order, class: "form-control", min: 0 %>
            <div class="form-text">Lower numbers appear first in lists.</div>
          </div>

          <div class="mb-3">
            <%= f.label :payment_link, "Payment Link", class: "form-label" %>
            <%= f.url_field :payment_link, class: "form-control", placeholder: "https://..." %>
            <div class="form-text">Public URL where members can make payments (e.g., PayPal.me link).</div>
          </div>

          <div class="mb-3">
            <%= f.label :webhook_url, "Webhook URL", class: "form-label" %>
            <%= f.text_field :webhook_url, class: "form-control", placeholder: "https://..." %>
            <div class="form-text">The URL where this processor sends webhook notifications (for reference).</div>
          </div>

          <div class="mb-3">
            <%= f.label :notes, class: "form-label" %>
            <%= f.text_area :notes, class: "form-control", rows: 4 %>
            <div class="form-text">Admin notes about this payment processor.</div>
          </div>

          <div class="mb-4">
            <div class="form-check">
              <%= f.check_box :enabled, class: "form-check-input" %>
              <%= f.label :enabled, "Enabled", class: "form-check-label" %>
            </div>
            <div class="form-text">Disabled processors will not be synced automatically.</div>
          </div>

          <div class="d-flex gap-2">
            <%= f.submit "Save Changes", class: "btn btn-primary" %>
            <%= link_to "Cancel", payment_processors_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card shadow-sm border-0">
      <div class="card-header bg-light">
        <h5 class="card-title mb-0">Info</h5>
      </div>
      <div class="card-body">
        <dl class="mb-0">
          <dt>Key</dt>
          <dd><code><%= @payment_processor.key %></code></dd>

          <dt>Created</dt>
          <dd><%= l(@payment_processor.created_at, format: :long) %></dd>

          <dt>Last Updated</dt>
          <dd><%= l(@payment_processor.updated_at, format: :long) %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>
