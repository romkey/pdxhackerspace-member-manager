<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0">RFID Readers</h1>
  <%= link_to "&larr; Back to Settings".html_safe, settings_path, class: "text-decoration-none" %>
</div>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <h2 class="h5 mb-3">Add New RFID Reader</h2>
    <% if @rfid_reader&.errors&.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% @rfid_reader.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model: @rfid_reader || RfidReader.new, url: rfid_readers_path, local: true, class: "row g-3" do |f| %>
      <div class="col-md-5">
        <%= f.text_field :name, class: "form-control #{'is-invalid' if @rfid_reader&.errors&.key?(:name)}", placeholder: "Reader name", required: true, value: @rfid_reader&.name %>
        <% if @rfid_reader&.errors&.key?(:name) %>
          <div class="invalid-feedback">
            <%= @rfid_reader.errors[:name].first %>
          </div>
        <% end %>
      </div>
      <div class="col-md-5">
        <%= f.text_area :note, class: "form-control #{'is-invalid' if @rfid_reader&.errors&.key?(:note)}", placeholder: "Notes (optional)", rows: 1, value: @rfid_reader&.note %>
        <% if @rfid_reader&.errors&.key?(:note) %>
          <div class="invalid-feedback">
            <%= @rfid_reader.errors[:note].first %>
          </div>
        <% end %>
      </div>
      <div class="col-md-2">
        <%= f.submit "Add Reader", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>

<div class="card shadow-sm border-0">
  <div class="card-body">
    <h2 class="h5 mb-3">RFID Readers</h2>
    <% if @rfid_readers.any? %>
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="bg-body-tertiary">
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Note</th>
              <th scope="col">Key</th>
              <th scope="col" class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @rfid_readers.each do |reader| %>
              <tr>
                <td><strong><%= reader.name %></strong></td>
                <td><%= reader.note.presence || '<span class="text-muted">â€”</span>'.html_safe %></td>
                <td><code class="small"><%= reader.key %></code></td>
                <td class="text-end">
                  <div class="btn-group btn-group-sm" role="group">
                    <%= link_to "Edit", edit_rfid_reader_path(reader), class: "btn btn-outline-primary" %>
                    <%= button_to "Delete", rfid_reader_path(reader), method: :delete, 
                        class: "btn btn-outline-danger",
                        data: { confirm: "Are you sure you want to delete '#{reader.name}'? This cannot be undone." } %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-muted mb-0">No RFID readers yet. Add one above to get started.</p>
    <% end %>
  </div>
</div>

