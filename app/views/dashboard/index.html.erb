<div class="py-4">
  <div class="row g-4">
    <div class="col-12 col-md-4">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <p class="text-muted mb-1">Active Members</p>
          <p class="display-6 fw-bold mb-0">
            <%= link_to @active_user_count, users_path, class: "text-decoration-none" %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <p class="text-muted mb-1">Total Members</p>
          <p class="display-6 fw-bold mb-0">
            <%= link_to @user_count, users_path, class: "text-decoration-none" %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <p class="text-muted mb-1">Last Synced</p>
          <p class="fs-4 fw-semibold mb-0">
            <%= @last_synced_at.present? ? l(@last_synced_at, format: :long) : "Not synced yet" %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-4 mt-1">
    <div class="col-12 col-md-3">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <p class="text-muted mb-1">Sheet Entries</p>
          <p class="display-6 fw-bold mb-0">
            <%= link_to @sheet_entry_count, sheet_entries_path, class: "text-decoration-none" %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-3">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <p class="text-muted mb-1">Slack Users</p>
          <p class="display-6 fw-bold mb-0">
            <%= link_to @slack_user_count, slack_users_path, class: "text-decoration-none" %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-3">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <p class="text-muted mb-1">PayPal Payments</p>
          <p class="display-6 fw-bold mb-0">
            <%= link_to @paypal_payment_count, paypal_payments_path, class: "text-decoration-none" %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-3">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <p class="text-muted mb-1">Recharge Payments</p>
          <p class="display-6 fw-bold mb-0">
            <%= link_to @recharge_payment_count, recharge_payments_path, class: "text-decoration-none" %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-5 text-center">
    <p class="lead">Keep the MemberManager roster aligned with Authentik.</p>
    <%= link_to "View Users", users_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>


