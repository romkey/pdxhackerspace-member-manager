<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0"><%= current_user_admin? ? "Edit" : "Manage" %> Training Topic: <%= @training_topic.name %></h1>
  <% if current_user_admin? %>
    <%= link_to "&larr; Back to Training Topics".html_safe, training_topics_path, class: "text-decoration-none" %>
  <% else %>
    <%= link_to "&larr; Back to Train".html_safe, train_member_path, class: "text-decoration-none" %>
  <% end %>
</div>

<% if current_user_admin? %>
  <div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
      <h2 class="h5 mb-3">Topic Name</h2>
      <% if @training_topic.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% @training_topic.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @training_topic, url: training_topic_path(@training_topic), local: true, class: "row g-3" do |f| %>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control #{'is-invalid' if @training_topic.errors.key?(:name)}", required: true %>
          <% if @training_topic.errors.key?(:name) %>
            <div class="invalid-feedback">
              <%= @training_topic.errors[:name].first %>
            </div>
          <% end %>
        </div>
        <div class="col-md-4">
          <%= f.submit "Update Topic", class: "btn btn-primary w-100" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <h2 class="h5 mb-3">Links</h2>
    
    <% if @training_topic.links.any? %>
      <div class="mb-4">
        <% @training_topic.links.order(:title).each do |link| %>
          <div class="border rounded p-3 mb-2" id="link-row-<%= link.id %>">
            <%# Display mode %>
            <div class="link-display-<%= link.id %> d-flex justify-content-between align-items-center">
              <div>
                <strong><%= link.title %></strong>
                <br>
                <%= link_to link.url, link.url, target: "_blank", rel: "noopener", class: "text-decoration-none small text-truncate d-inline-block", style: "max-width: 400px;" %>
              </div>
              <div class="d-flex gap-2">
                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="toggleEditLink(<%= link.id %>)">
                  <i class="bi bi-pencil"></i> Edit
                </button>
                <%= button_to training_topic_link_path(@training_topic, link), 
                    method: :delete, 
                    class: "btn btn-sm btn-outline-danger",
                    data: { turbo_confirm: "Remove this link?" } do %>
                  <i class="bi bi-trash"></i> Remove
                <% end %>
              </div>
            </div>
            
            <%# Edit mode %>
            <div class="link-edit-<%= link.id %>" style="display: none;">
              <%= form_with model: link, url: training_topic_link_path(@training_topic, link), local: true do |f| %>
                <div class="row g-2 align-items-end">
                  <div class="col-md-4">
                    <%= f.label :title, "Title", class: "form-label small" %>
                    <%= f.text_field :title, class: "form-control form-control-sm", required: true %>
                  </div>
                  <div class="col-md-5">
                    <%= f.label :url, "URL", class: "form-label small" %>
                    <%= f.url_field :url, class: "form-control form-control-sm", required: true %>
                  </div>
                  <div class="col-md-3 d-flex gap-2">
                    <%= f.submit "Save", class: "btn btn-sm btn-primary" %>
                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="toggleEditLink(<%= link.id %>)">Cancel</button>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-muted mb-4">No links added yet.</p>
    <% end %>

    <h6 class="text-muted mb-3">Add New Link</h6>
    <%= form_with model: TrainingTopicLink.new, url: training_topic_links_path(@training_topic), local: true, class: "row g-2 align-items-end" do |f| %>
      <div class="col-md-4">
        <%= f.label :title, "Title", class: "form-label small" %>
        <%= f.text_field :title, class: "form-control", placeholder: "e.g., Safety Guide", required: true %>
      </div>
      <div class="col-md-5">
        <%= f.label :url, "URL", class: "form-label small" %>
        <%= f.url_field :url, class: "form-control", placeholder: "https://...", required: true %>
      </div>
      <div class="col-md-3">
        <%= f.submit "Add Link", class: "btn btn-success w-100" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  function toggleEditLink(linkId) {
    const displayElements = document.querySelectorAll('.link-display-' + linkId);
    const editElements = document.querySelectorAll('.link-edit-' + linkId);
    
    displayElements.forEach(el => {
      el.style.display = el.style.display === 'none' ? '' : 'none';
    });
    editElements.forEach(el => {
      el.style.display = el.style.display === 'none' ? '' : 'none';
    });
  }
</script>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="h5 mb-0"><i class="bi bi-file-earmark me-2"></i>Documents</h2>
      <%= link_to new_document_path(training_topic_id: @training_topic.id, return_to_topic: @training_topic.id), class: "btn btn-sm btn-success" do %>
        <i class="bi bi-plus-lg"></i> Upload Document
      <% end %>
    </div>

    <% if @topic_documents.any? %>
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="bg-body-tertiary">
            <tr>
              <th>Title</th>
              <th>Filename</th>
              <th>Size</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @topic_documents.each do |doc| %>
              <tr>
                <td><%= doc.title %></td>
                <td class="text-muted small"><%= doc.filename %></td>
                <td class="text-muted small"><%= doc.file.attached? ? number_to_human_size(doc.file.byte_size) : 'N/A' %></td>
                <td class="text-end">
                  <div class="d-flex gap-1 justify-content-end">
                    <% if doc.file.attached? %>
                      <%= link_to download_document_path(doc), class: "btn btn-sm btn-outline-secondary", title: "Download" do %>
                        <i class="bi bi-download"></i>
                      <% end %>
                    <% end %>
                    <%= link_to edit_document_path(doc, return_to_topic: @training_topic.id), class: "btn btn-sm btn-outline-primary", title: "Edit" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                    <%= button_to document_path(doc, return_to_topic: @training_topic.id),
                        method: :delete,
                        class: "btn btn-sm btn-outline-danger",
                        title: "Delete",
                        data: { turbo_confirm: "Delete this document?" } do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-muted mb-0">No documents associated with this topic yet.</p>
    <% end %>
  </div>
</div>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <h2 class="h5 mb-3"><i class="bi bi-mortarboard me-2"></i>Train a Member in <%= @training_topic.name %></h2>
    
    <div class="row">
      <div class="col-md-6">
        <input type="text" id="topic_member_search" class="form-control" 
               placeholder="Type to search by name, email, or username..." autocomplete="off">
        <div id="topic_search_results" class="mt-2 d-none border rounded" style="max-height: 300px; overflow-y: auto;">
          <% trained_user_ids = @trained_users.pluck(:id) %>
          <% @users_for_search.each do |user| %>
            <% is_trained = trained_user_ids.include?(user.id) %>
            <div class="search-result-item d-none p-2 border-bottom d-flex justify-content-between align-items-center"
                 data-search-text="<%= [user.display_name, user.email, user.username].compact.join(' ').downcase %>">
              <div>
                <div class="fw-semibold small"><%= user.display_name %></div>
                <% if user.email.present? %>
                  <div class="text-muted" style="font-size: 0.75rem;"><%= user.email %></div>
                <% end %>
              </div>
              <div>
                <% if is_trained %>
                  <span class="badge text-bg-success"><i class="bi bi-check"></i> Trained</span>
                <% else %>
                  <%= button_to add_training_path(user_id: user.id, topic_id: @training_topic.id, return_to: 'topic'), 
                      method: :post,
                      class: "btn btn-sm btn-success",
                      title: "Add training" do %>
                    <i class="bi bi-plus-lg"></i> Train
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <div id="topic_no_results" class="mt-2 p-3 text-center text-muted border rounded d-none">
          No members found matching your search.
        </div>
      </div>
      <div class="col-md-6">
        <p class="text-muted small mb-0">
          Search for a member and click "Train" to mark them as trained in <strong><%= @training_topic.name %></strong>.
          Members already trained in this topic will show a green "Trained" badge.
        </p>
      </div>
    </div>
  </div>
</div>

<script>
  (function() {
    var searchInput = document.getElementById('topic_member_search');
    var searchResults = document.getElementById('topic_search_results');
    var noResults = document.getElementById('topic_no_results');
    
    if (!searchInput || !searchResults) return;
    
    var results = searchResults.querySelectorAll('.search-result-item');
    
    function doFilter() {
      var searchTerm = searchInput.value.toLowerCase().trim();
      var visibleCount = 0;

      if (searchTerm === '' || searchTerm.length < 2) {
        searchResults.classList.add('d-none');
        noResults.classList.add('d-none');
        for (var i = 0; i < results.length; i++) {
          results[i].classList.add('d-none');
        }
        return;
      }

      for (var i = 0; i < results.length; i++) {
        var result = results[i];
        var text = result.getAttribute('data-search-text');
        if (text && text.indexOf(searchTerm) !== -1) {
          result.classList.remove('d-none');
          visibleCount++;
        } else {
          result.classList.add('d-none');
        }
      }

      if (visibleCount === 0) {
        searchResults.classList.add('d-none');
        noResults.classList.remove('d-none');
      } else {
        searchResults.classList.remove('d-none');
        noResults.classList.add('d-none');
      }
    }

    searchInput.addEventListener('input', doFilter);
    searchInput.addEventListener('keyup', doFilter);
  })();
</script>

<div class="row g-4">
  <div class="col-md-6">
    <div class="card shadow-sm border-0">
      <div class="card-body">
        <h2 class="h5 mb-3">Users Trained in This Topic</h2>
        <% if @trained_users.any? %>
          <ul class="list-unstyled mb-0">
            <% @trained_users.each do |user| %>
              <li class="mb-2 d-flex justify-content-between align-items-center">
                <%= link_to user.display_name, user_path(user), class: "text-decoration-none" %>
                <%= button_to "Revoke", revoke_training_training_topic_path(@training_topic, user_id: user.id), 
                    method: :delete, 
                    class: "btn btn-sm btn-outline-danger",
                    data: { confirm: "Are you sure you want to revoke training for #{user.display_name}?" } %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted mb-0">No users have been trained in this topic yet.</p>
        <% end %>
      </div>
    </div>
  </div>

  <% if current_user_admin? %>
    <div class="col-md-6">
      <div class="card shadow-sm border-0">
        <div class="card-body">
          <h2 class="h5 mb-3">Users Who Can Train This Topic</h2>
          <% if @trainer_users.any? %>
            <ul class="list-unstyled mb-0">
              <% @trainer_users.each do |user| %>
                <li class="mb-2 d-flex justify-content-between align-items-center">
                  <%= link_to user.display_name, user_path(user), class: "text-decoration-none" %>
                  <%= button_to "Revoke", revoke_trainer_capability_training_topic_path(@training_topic, user_id: user.id), 
                      method: :delete, 
                      class: "btn btn-sm btn-outline-danger",
                      data: { confirm: "Are you sure you want to revoke trainer capability for #{user.display_name}?" } %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-muted mb-0">No users can train this topic yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if current_user_admin? %>
  <div class="card shadow-sm border-0 mt-4">
    <div class="card-body">
      <h2 class="h5 mb-3 text-danger">Danger Zone</h2>
      <% if @training_topic.trainings.any? || @training_topic.trainer_capabilities.any? %>
        <p class="text-muted small">Cannot delete this topic because it has trainings or trainer capabilities.</p>
      <% else %>
        <%= button_to "Delete Topic", training_topic_path(@training_topic),
            method: :delete,
            class: "btn btn-danger",
            data: { turbo_confirm: "Are you sure you want to delete '#{@training_topic.name}'? This cannot be undone." } %>
      <% end %>
    </div>
  </div>
<% end %>
