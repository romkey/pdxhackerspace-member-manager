<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Documents</h1>
    <p class="text-muted mb-0">Manage documents associated with training topics.</p>
  </div>
  <div>
    <%= link_to "New Document", new_document_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="card shadow-sm border-0">
  <div class="table-responsive">
    <table class="table mb-0 align-middle">
      <thead class="bg-body-tertiary">
        <tr>
          <th scope="col">Title</th>
          <th scope="col">File</th>
          <th scope="col">Training Topics</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if @documents.any? %>
          <% @documents.each do |document| %>
            <tr>
              <td class="fw-semibold"><%= document.title %></td>
              <td>
                <% if document.file.attached? %>
                  <%= link_to document.filename, rails_blob_path(document.file, disposition: "attachment"), class: "text-decoration-none" %>
                  <span class="text-muted small">(<%= number_to_human_size(document.file.byte_size) %>)</span>
                <% else %>
                  <span class="text-muted fst-italic">No file</span>
                <% end %>
              </td>
              <td>
                <% if document.training_topics.any? %>
                  <% document.training_topics.order(:name).each do |topic| %>
                    <span class="badge text-bg-secondary"><%= topic.name %></span>
                  <% end %>
                <% else %>
                  <span class="text-muted fst-italic">None</span>
                <% end %>
              </td>
              <td>
                <%= link_to "Edit", edit_document_path(document), class: "btn btn-sm btn-outline-primary" %>
                <%= button_to "Delete", document_path(document), method: :delete, class: "btn btn-sm btn-outline-danger", 
                    data: { turbo_confirm: "Are you sure you want to delete this document?" } %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="4" class="text-center text-muted py-4">
              No documents yet. <%= link_to "Create one", new_document_path %>.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
