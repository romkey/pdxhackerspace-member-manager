<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Slack Users</h1>
    <p class="text-muted mb-0">
      <strong><%= @total_slack_users %></strong> members —
      <strong><%= @shared_email_count %></strong> share emails and
      <strong><%= @shared_name_count %></strong> share names with Authentik users
    </p>
    <p class="text-muted mb-0">
      <strong><%= @admin_count %></strong> admins —
      <strong><%= @bot_count %></strong> bots —
      <strong><%= @deactivated_count %></strong> deactivated —
      <strong><%= @inactive_count %></strong> inactive (no activity in last year)
    </p>
  </div>
  <div class="d-flex gap-2">
    <%= button_to "Sync Slack users", sync_slack_users_path, method: :post, class: "btn btn-primary", data: { turbo: false } %>
    <%= button_to "Sync to Users", sync_to_users_slack_users_path, method: :post, class: "btn btn-outline-primary", data: { turbo: false } %>
    <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#importSlackMembersModal">Import Members</button>
    <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#importSlackAnalyticsModal">Import Analytics</button>
  </div>
</div>

<!-- Import Members Modal -->
<div class="modal fade" id="importSlackMembersModal" tabindex="-1" aria-labelledby="importSlackMembersModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="importSlackMembersModalLabel">Import Slack Members from CSV</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with url: import_members_slack_users_path, method: :post, multipart: true, local: true do |f| %>
        <div class="modal-body">
          <p class="text-muted mb-2">Select the Slack CSV export for members. Expected columns:</p>
          <code class="d-block mb-3">username,email,status,billing-active,has-2fa,has-sso,userid,fullname,displayname,expiration-timestamp</code>
          <div class="mb-3">
            <%= f.file_field :file, accept: '.csv,text/csv', class: "form-control", required: true %>
          </div>
          <div class="alert alert-warning mb-0">
            <strong>Note:</strong> Users are matched by <code>userid</code>. Existing Slack users will be updated.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= f.submit "Import CSV", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Import Analytics Modal -->
<div class="modal fade" id="importSlackAnalyticsModal" tabindex="-1" aria-labelledby="importSlackAnalyticsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="importSlackAnalyticsModalLabel">Import Slack Analytics from CSV</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with url: import_analytics_slack_users_path, method: :post, multipart: true, local: true do |f| %>
        <div class="modal-body">
          <p class="text-muted mb-2">Select the Slack analytics CSV export. Expected headers:</p>
          <code class="d-block mb-3">Name,What I Do,User ID,Username,Display name,Email,Account type,Account created (UTC),Days active,Days active (Desktop),Days active (Android),Days active (iOS),Messages posted,Last active (UTC),Last active (Desktop) (UTC),Last active (Android) (UTC),Last active (iOS) (UTC)</code>
          <div class="mb-3">
            <%= f.file_field :file, accept: '.csv,text/csv', class: "form-control", required: true %>
          </div>
          <div class="alert alert-warning mb-0">
            <strong>Note:</strong> Rows are matched by <code>User ID</code> or <code>Username</code>. <code>Last active (UTC)</code> is stored as midnight UTC for that date.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= f.submit "Import CSV", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <div class="d-flex gap-3 align-items-center flex-wrap">
      <div class="flex-grow-1" style="min-width: 300px;">
        <input type="text" id="slack_search" class="form-control" placeholder="Search by name, email, or linked user…" autocomplete="off">
      </div>
      <div class="d-flex gap-2 align-items-center">
        <button type="button" id="clear_slack_search" class="btn btn-outline-secondary" style="display: none;">Clear</button>
        <%= form_with url: slack_users_path, method: :get, local: true, class: "d-flex align-items-center" do |form| %>
          <div class="form-check">
            <%= form.check_box :show_bots, { class: "form-check-input", checked: @show_bots, onchange: "this.form.submit()" }, "1", "0" %>
            <%= form.label :show_bots, "Show bot users", class: "form-check-label" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="card shadow-sm border-0">
  <div class="table-responsive">
    <table class="table mb-0 align-middle">
      <thead class="bg-body-tertiary">
        <tr>
          <th scope="col" style="width: 48px;"></th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">User</th>
          <th scope="col">Admin</th>
          <th scope="col">Owner</th>
          <th scope="col">Bot</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody id="slack_users_table_body">
        <% @slack_users.each do |user| %>
          <tr class="slack-user-row" 
              data-search-text="<%= [
                user.display_name,
                user.email,
                user.user&.display_name,
                user.is_admin? ? "admin yes" : "admin no",
                user.is_owner? ? "owner yes" : "owner no",
                user.is_bot? ? "bot" : "human",
                user.deleted? ? "disabled" : "active"
              ].compact.join(' ').downcase %>">
            <td>
              <% image_url = user.raw_attributes.dig("profile", "image_32") %>
              <% if image_url.present? %>
                <img src="<%= image_url %>" alt="<%= user.display_name %>" style="width: 32px; height: 32px; border-radius: 4px;">
              <% end %>
            </td>
            <td class="fw-semibold">
              <%= link_to user.display_name, slack_user_path(user), class: "text-decoration-none" %>
            </td>
            <td>
              <% if user.email.present? %>
                <%= mail_to user.email %>
              <% else %>
                <span class="text-muted fst-italic">Not provided</span>
              <% end %>
            </td>
            <td>
              <% if user.user.present? %>
                <%= link_to user.user.display_name, user_path(user.user), class: "text-decoration-none" %>
              <% else %>
                <span class="text-muted fst-italic">Not linked</span>
              <% end %>
            </td>
            <td>
              <span class="badge text-bg-<%= user.is_admin? ? 'success' : 'secondary' %>">
                <%= user.is_admin? ? "Yes" : "No" %>
              </span>
            </td>
            <td>
              <span class="badge text-bg-<%= user.is_owner? ? 'success' : 'secondary' %>">
                <%= user.is_owner? ? "Yes" : "No" %>
              </span>
            </td>
            <td>
              <span class="badge text-bg-<%= user.is_bot? ? 'warning' : 'secondary' %>">
                <%= user.is_bot? ? "Bot" : "Human" %>
              </span>
            </td>
            <td>
              <span class="badge text-bg-<%= user.deleted? ? 'secondary' : 'success' %>">
                <%= user.deleted? ? "Disabled" : "Active" %>
              </span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
  (function() {
    const searchInput = document.getElementById('slack_search');
    const clearButton = document.getElementById('clear_slack_search');
    const tableBody = document.getElementById('slack_users_table_body');
    
    if (!searchInput || !tableBody) return;
    
    function filterUsers() {
      const searchTerm = searchInput.value.toLowerCase().trim();
      const rows = tableBody.querySelectorAll('.slack-user-row');
      
      rows.forEach(function(row) {
        const searchText = row.getAttribute('data-search-text');
        if (searchText && searchText.includes(searchTerm)) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
      
      // Show/hide clear button
      if (clearButton) {
        if (searchTerm !== '') {
          clearButton.style.display = '';
        } else {
          clearButton.style.display = 'none';
        }
      }
    }
    
    searchInput.addEventListener('input', filterUsers);
    
    if (clearButton) {
      clearButton.addEventListener('click', function() {
        searchInput.value = '';
        filterUsers();
        searchInput.focus();
      });
    }
  })();
</script>

