<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Slack Users</h1>
    <p class="text-muted mb-0"><strong><%= @total_count %></strong> total Slack users</p>
  </div>
  <div class="d-flex gap-2">
    <%= button_to "Sync Slack users", sync_slack_users_path, method: :post, class: "btn btn-primary", data: { turbo: false } %>
    <%= button_to "Sync to Members", sync_to_users_slack_users_path, method: :post, class: "btn btn-outline-primary", data: { turbo: false } %>
    <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#importSlackMembersModal">Import Members</button>
    <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#importSlackAnalyticsModal">Import Analytics</button>
  </div>
</div>

<% if @filter_active %>
  <div class="alert alert-info d-flex justify-content-between align-items-center mb-4">
    <div>
      <i class="bi bi-funnel me-2"></i>
      Showing <strong><%= @filtered_count %></strong> of <%= @total_count %> Slack users
      <% if params[:linked].present? %>
        — <%= case params[:linked]
              when 'yes' then 'Linked'
              when 'no' then 'Unlinked'
              when 'dont_link' then "Don't Link"
              end %>
      <% end %>
      <% if params[:is_admin].present? %>
        — <%= params[:is_admin] == 'yes' ? 'Admins' : 'Non-admins' %>
      <% end %>
      <% if params[:is_owner].present? %>
        — <%= params[:is_owner] == 'yes' ? 'Owners' : 'Non-owners' %>
      <% end %>
      <% if params[:is_bot].present? %>
        — <%= params[:is_bot] == 'yes' ? 'Bots' : 'Humans' %>
      <% end %>
      <% if params[:status].present? %>
        — <%= params[:status].humanize %>
      <% end %>
    </div>
    <%= link_to "Clear filters", slack_users_path(sort: @sort_column, direction: @sort_direction), class: "btn btn-outline-secondary btn-sm" %>
  </div>
<% end %>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <p class="small text-muted mb-3"><i class="bi bi-hand-index me-1"></i> Click any badge to filter the list</p>
    
    <h2 class="h6 mb-3">Linked to Member</h2>
    <div class="d-flex flex-wrap gap-2 mb-3">
      <%= link_to slack_users_path(linked: 'yes'), class: "badge text-bg-success text-decoration-none #{'border border-dark border-2' if params[:linked] == 'yes'}" do %>
        Linked: <strong><%= @linked_count %></strong>
      <% end %>
      <%= link_to slack_users_path(linked: 'no'), class: "badge text-bg-warning text-decoration-none #{'border border-dark border-2' if params[:linked] == 'no'}" do %>
        Unlinked: <strong><%= @unlinked_count %></strong>
      <% end %>
      <%= link_to slack_users_path(linked: 'dont_link'), class: "badge text-bg-secondary text-decoration-none #{'border border-dark border-2' if params[:linked] == 'dont_link'}" do %>
        Don't Link: <strong><%= @dont_link_count %></strong>
      <% end %>
    </div>
    
    <h2 class="h6 mb-3">Role</h2>
    <div class="d-flex flex-wrap gap-2 mb-3">
      <%= link_to slack_users_path(is_admin: 'yes'), class: "badge text-bg-primary text-decoration-none #{'border border-dark border-2' if params[:is_admin] == 'yes'}" do %>
        Admin: <strong><%= @admin_count %></strong>
      <% end %>
      <%= link_to slack_users_path(is_owner: 'yes'), class: "badge text-bg-warning text-decoration-none #{'border border-dark border-2' if params[:is_owner] == 'yes'}" do %>
        Owner: <strong><%= @owner_count %></strong>
      <% end %>
    </div>
    
    <h2 class="h6 mb-3">Type</h2>
    <div class="d-flex flex-wrap gap-2 mb-3">
      <%= link_to slack_users_path(is_bot: 'no'), class: "badge text-bg-info text-decoration-none #{'border border-dark border-2' if params[:is_bot] == 'no'}" do %>
        Human: <strong><%= @human_count %></strong>
      <% end %>
      <%= link_to slack_users_path(is_bot: 'yes'), class: "badge text-bg-secondary text-decoration-none #{'border border-dark border-2' if params[:is_bot] == 'yes'}" do %>
        Bot: <strong><%= @bot_count %></strong>
      <% end %>
    </div>
    
    <h2 class="h6 mb-3">Status</h2>
    <div class="d-flex flex-wrap gap-2">
      <%= link_to slack_users_path(status: 'active'), class: "badge text-bg-success text-decoration-none #{'border border-dark border-2' if params[:status] == 'active'}" do %>
        Active: <strong><%= @active_count %></strong>
      <% end %>
      <%= link_to slack_users_path(status: 'deactivated'), class: "badge text-bg-danger text-decoration-none #{'border border-dark border-2' if params[:status] == 'deactivated'}" do %>
        Deactivated: <strong><%= @deactivated_count %></strong>
      <% end %>
    </div>
  </div>
</div>

<!-- Import Members Modal -->
<div class="modal fade" id="importSlackMembersModal" tabindex="-1" aria-labelledby="importSlackMembersModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="importSlackMembersModalLabel">Import Slack Members from CSV</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with url: import_members_slack_users_path, method: :post, multipart: true, local: true do |f| %>
        <div class="modal-body">
          <p class="text-muted mb-2">Select the Slack CSV export for members. Expected columns:</p>
          <code class="d-block mb-3">username,email,status,billing-active,has-2fa,has-sso,userid,fullname,displayname,expiration-timestamp</code>
          <div class="mb-3">
            <%= f.file_field :file, accept: '.csv,text/csv', class: "form-control", required: true %>
          </div>
          <div class="alert alert-warning mb-0">
            <strong>Note:</strong> Users are matched by <code>userid</code>. Existing Slack users will be updated.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= f.submit "Import CSV", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Import Analytics Modal -->
<div class="modal fade" id="importSlackAnalyticsModal" tabindex="-1" aria-labelledby="importSlackAnalyticsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="importSlackAnalyticsModalLabel">Import Slack Analytics from CSV</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with url: import_analytics_slack_users_path, method: :post, multipart: true, local: true do |f| %>
        <div class="modal-body">
          <p class="text-muted mb-2">Select the Slack analytics CSV export. Expected headers:</p>
          <code class="d-block mb-3">Name,What I Do,User ID,Username,Display name,Email,Account type,Account created (UTC),Days active,Days active (Desktop),Days active (Android),Days active (iOS),Messages posted,Last active (UTC),Last active (Desktop) (UTC),Last active (Android) (UTC),Last active (iOS) (UTC)</code>
          <div class="mb-3">
            <%= f.file_field :file, accept: '.csv,text/csv', class: "form-control", required: true %>
          </div>
          <div class="alert alert-warning mb-0">
            <strong>Note:</strong> Rows are matched by <code>User ID</code> or <code>Username</code>. <code>Last active (UTC)</code> is stored as midnight UTC for that date.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= f.submit "Import CSV", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <div class="d-flex gap-2">
      <input type="text" id="slack_search" class="form-control" placeholder="Search by name, email, or linked user…" autocomplete="off">
      <button type="button" id="clear_slack_search" class="btn btn-outline-secondary" style="display: none;">Clear</button>
    </div>
  </div>
</div>

<div class="card shadow-sm border-0">
  <div class="table-responsive">
    <table class="table mb-0 align-middle">
      <thead class="bg-body-tertiary">
        <tr>
          <th scope="col" style="width: 48px;"></th>
          <th scope="col"><%= sortable_column('display_name', 'Name', @sort_column, @sort_direction) %></th>
          <th scope="col"><%= sortable_column('email', 'Email', @sort_column, @sort_direction) %></th>
          <th scope="col">Linked User</th>
          <th scope="col"><%= sortable_column('is_admin', 'Admin', @sort_column, @sort_direction) %></th>
          <th scope="col"><%= sortable_column('is_owner', 'Owner', @sort_column, @sort_direction) %></th>
          <th scope="col"><%= sortable_column('is_bot', 'Bot', @sort_column, @sort_direction) %></th>
          <th scope="col"><%= sortable_column('deleted', 'Status', @sort_column, @sort_direction) %></th>
          <th scope="col" class="text-end"></th>
        </tr>
      </thead>
      <tbody id="slack_users_table_body">
        <% @slack_users.each do |slack_user| %>
          <tr class="slack-user-row" 
              data-search-text="<%= [
                slack_user.display_name,
                slack_user.email,
                slack_user.user&.display_name,
                slack_user.is_admin? ? "admin yes" : "admin no",
                slack_user.is_owner? ? "owner yes" : "owner no",
                slack_user.is_bot? ? "bot" : "human",
                slack_user.deleted? ? "disabled deactivated" : "active",
                slack_user.dont_link? ? "dont link" : nil
              ].compact.join(' ').downcase %>">
            <td>
              <% image_url = slack_user.raw_attributes.dig("profile", "image_32") %>
              <% if image_url.present? %>
                <%= link_to slack_user_path(slack_user, @list_params) do %>
                  <img src="<%= image_url %>" alt="<%= slack_user.display_name %>" style="width: 32px; height: 32px; border-radius: 4px;">
                <% end %>
              <% end %>
            </td>
            <td class="fw-semibold">
              <%= link_to slack_user.display_name, slack_user_path(slack_user, @list_params), class: "text-decoration-none" %>
            </td>
            <td>
              <% if slack_user.email.present? %>
                <%= mail_to slack_user.email %>
              <% else %>
                <span class="text-muted fst-italic">Not provided</span>
              <% end %>
            </td>
            <td>
              <% if slack_user.user.present? %>
                <%= link_to slack_user.user.display_name, user_path(slack_user.user), class: "text-decoration-none" %>
              <% elsif slack_user.dont_link? %>
                <span class="badge text-bg-secondary">Don't Link</span>
              <% else %>
                <span class="text-muted fst-italic">Not linked</span>
              <% end %>
            </td>
            <td>
              <span class="badge text-bg-<%= slack_user.is_admin? ? 'primary' : 'secondary' %>">
                <%= slack_user.is_admin? ? "Yes" : "No" %>
              </span>
            </td>
            <td>
              <span class="badge text-bg-<%= slack_user.is_owner? ? 'warning' : 'secondary' %>">
                <%= slack_user.is_owner? ? "Yes" : "No" %>
              </span>
            </td>
            <td>
              <span class="badge text-bg-<%= slack_user.is_bot? ? 'info' : 'secondary' %>">
                <%= slack_user.is_bot? ? "Bot" : "Human" %>
              </span>
            </td>
            <td>
              <span class="badge text-bg-<%= slack_user.deleted? ? 'danger' : 'success' %>">
                <%= slack_user.deleted? ? "Deactivated" : "Active" %>
              </span>
            </td>
            <td class="text-end text-nowrap">
              <% if slack_user.user.blank? && !slack_user.is_bot? && !slack_user.dont_link? %>
                <button type="button" class="btn btn-sm btn-outline-primary"
                        data-bs-toggle="modal" data-bs-target="#slackLinkUserModal"
                        data-slack-user-id="<%= slack_user.id %>" data-slack-user-name="<%= slack_user.display_name %>">
                  Link
                </button>
                <%= button_to "Don't Link", toggle_dont_link_slack_user_path(slack_user, from_index: 'true', **@list_params),
                    method: :post, class: "btn btn-sm btn-outline-secondary", data: { turbo: false } %>
                <%= button_to "Create Member", create_member_slack_user_path(slack_user, from_index: 'true', **@list_params),
                    method: :post, class: "btn btn-sm btn-outline-success", data: { turbo: false,
                    turbo_confirm: "Create a new member from '#{slack_user.display_name}'?" } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% if @all_users.present? %>
<!-- Link User Modal -->
<div class="modal fade" id="slackLinkUserModal" tabindex="-1" aria-labelledby="slackLinkUserModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="slackLinkUserModalLabel">Link Slack User to Member</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form id="slackLinkUserForm" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="from_index" value="true">
        <% @list_params.each do |key, value| %>
          <input type="hidden" name="<%= key %>" value="<%= value %>">
        <% end %>
        <div class="modal-body">
          <p class="mb-3">Link <strong id="slackLinkUserName"></strong> to an existing member.</p>
          <div class="mb-3">
            <label for="slack_user_search" class="form-label">Search Members</label>
            <input type="text" id="slack_user_search" class="form-control mb-2" placeholder="Type to search members…" autocomplete="off">
          </div>
          <div class="mb-3">
            <label class="form-label">Select Member</label>
            <div id="slack_user_list" class="border rounded" style="max-height: 300px; overflow-y: auto;">
              <% @all_users.each do |user| %>
                <div class="slack-link-user-item p-2 border-bottom" data-user-id="<%= user.id %>" data-user-name="<%= user.display_name.downcase %>" style="cursor: pointer;">
                  <input type="radio" name="user_id" id="slack_link_user_<%= user.id %>" value="<%= user.id %>" class="form-check-input me-2" required>
                  <label for="slack_link_user_<%= user.id %>" class="form-check-label mb-0" style="cursor: pointer;">
                    <%= user.display_name %>
                    <% if user.email.present? %>
                      <small class="text-muted">(<%= user.email %>)</small>
                    <% end %>
                  </label>
                </div>
              <% end %>
            </div>
            <div id="slack_no_results" class="text-muted text-center p-3" style="display: none;">
              No members found matching your search.
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Link Member</button>
        </div>
      </form>
    </div>
  </div>
</div>
<% end %>

<script>
  (function() {
    // Table search functionality
    const searchInput = document.getElementById('slack_search');
    const clearButton = document.getElementById('clear_slack_search');
    const tableBody = document.getElementById('slack_users_table_body');
    
    if (searchInput && tableBody) {
      function filterUsers() {
        const searchTerm = searchInput.value.toLowerCase().trim();
        const rows = tableBody.querySelectorAll('.slack-user-row');
        
        rows.forEach(function(row) {
          const searchText = row.getAttribute('data-search-text');
          if (searchText && searchText.includes(searchTerm)) {
            row.style.display = '';
          } else {
            row.style.display = 'none';
          }
        });
        
        if (clearButton) {
          clearButton.style.display = searchTerm !== '' ? '' : 'none';
        }
      }
      
      searchInput.addEventListener('input', filterUsers);
      
      if (clearButton) {
        clearButton.addEventListener('click', function() {
          searchInput.value = '';
          filterUsers();
          searchInput.focus();
        });
      }
    }

    // Link User Modal functionality
    const linkModal = document.getElementById('slackLinkUserModal');
    if (linkModal) {
      linkModal.addEventListener('show.bs.modal', function(event) {
        const button = event.relatedTarget;
        const slackUserId = button.getAttribute('data-slack-user-id');
        const slackUserName = button.getAttribute('data-slack-user-name');

        // Update form action to point to the correct slack user
        const form = document.getElementById('slackLinkUserForm');
        form.action = '/slack_users/' + slackUserId + '/link_user';

        // Update display name
        document.getElementById('slackLinkUserName').textContent = slackUserName;

        // Reset search
        const userSearch = document.getElementById('slack_user_search');
        if (userSearch) userSearch.value = '';

        const userList = document.getElementById('slack_user_list');
        const noResults = document.getElementById('slack_no_results');
        if (userList) {
          userList.style.display = 'block';
          userList.querySelectorAll('.slack-link-user-item').forEach(function(item) {
            item.style.display = '';
          });
          // Uncheck all radios
          userList.querySelectorAll('input[type="radio"]').forEach(function(r) { r.checked = false; });
        }
        if (noResults) noResults.style.display = 'none';
      });

      // Search within modal
      const userSearch = document.getElementById('slack_user_search');
      if (userSearch) {
        userSearch.addEventListener('input', function() {
          const term = this.value.toLowerCase().trim();
          const userList = document.getElementById('slack_user_list');
          const noResults = document.getElementById('slack_no_results');
          const items = userList.querySelectorAll('.slack-link-user-item');
          let visible = 0;

          items.forEach(function(item) {
            const name = item.getAttribute('data-user-name');
            if (name && name.includes(term)) {
              item.style.display = '';
              visible++;
            } else {
              item.style.display = 'none';
            }
          });

          userList.style.display = visible > 0 ? 'block' : 'none';
          if (noResults) noResults.style.display = visible === 0 && term !== '' ? 'block' : 'none';
        });
      }

      // Click-to-select radio in modal
      const userList = document.getElementById('slack_user_list');
      if (userList) {
        userList.addEventListener('click', function(e) {
          const item = e.target.closest('.slack-link-user-item');
          if (item && e.target.type !== 'radio' && e.target.tagName !== 'LABEL') {
            const radio = item.querySelector('input[type="radio"]');
            if (radio) radio.checked = true;
          }
        });
      }
    }
  })();
</script>

