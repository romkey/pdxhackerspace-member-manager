<div class="mb-4 d-flex justify-content-between align-items-center">
  <div class="d-flex gap-2 align-items-center">
    <% if @previous_slack_user %>
      <%= link_to slack_user_path(@previous_slack_user), class: "btn btn-outline-secondary", title: "Previous: #{@previous_slack_user.display_name}" do %>
        <i class="bi bi-chevron-left"></i> Previous
      <% end %>
    <% else %>
      <span class="btn btn-outline-secondary disabled" title="First user">
        <i class="bi bi-chevron-left"></i> Previous
      </span>
    <% end %>
    
    <% if @next_slack_user %>
      <%= link_to slack_user_path(@next_slack_user), class: "btn btn-outline-secondary", title: "Next: #{@next_slack_user.display_name}" do %>
        Next <i class="bi bi-chevron-right"></i>
      <% end %>
    <% else %>
      <span class="btn btn-outline-secondary disabled" title="Last user">
        Next <i class="bi bi-chevron-right"></i>
      </span>
    <% end %>
  </div>
  
  <div>
    <%= link_to "&larr; Back to Slack users".html_safe, slack_users_path, class: "text-decoration-none" %>
  </div>
</div>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <h1 class="h4 mb-3"><%= @slack_user.display_name %></h1>
    <div class="row">
      <div class="col-md-8">
        <dl class="row mb-0">
          <dt class="col-sm-3 text-secondary">Slack ID</dt>
          <dd class="col-sm-9"><%= @slack_user.slack_id %></dd>

          <dt class="col-sm-3 text-secondary">Team ID</dt>
          <dd class="col-sm-9"><%= @slack_user.team_id.presence || "—" %></dd>

          <dt class="col-sm-3 text-secondary">Email</dt>
          <dd class="col-sm-9">
            <% if @slack_user.email.present? %>
              <%= mail_to @slack_user.email %>
            <% else %>
              <span class="text-muted fst-italic">Not provided</span>
            <% end %>
          </dd>

          <dt class="col-sm-3 text-secondary">Real name</dt>
          <dd class="col-sm-9"><%= @slack_user.real_name.presence || "—" %></dd>

          <dt class="col-sm-3 text-secondary">Username</dt>
          <dd class="col-sm-9"><%= @slack_user.username.presence || "—" %></dd>

          <dt class="col-sm-3 text-secondary">Display name</dt>
          <dd class="col-sm-9"><%= @slack_user.display_name.presence || "—" %></dd>

          <dt class="col-sm-3 text-secondary">Title</dt>
          <dd class="col-sm-9"><%= @slack_user.title.presence || "—" %></dd>

          <dt class="col-sm-3 text-secondary">Phone</dt>
          <dd class="col-sm-9"><%= @slack_user.phone.presence || "—" %></dd>

          <dt class="col-sm-3 text-secondary">Timezone</dt>
          <dd class="col-sm-9"><%= @slack_user.tz.presence || "—" %></dd>

          <dt class="col-sm-3 text-secondary">Flags</dt>
          <dd class="col-sm-9">
            <span class="badge text-bg-<%= @slack_user.is_admin? ? 'success' : 'secondary' %>">Admin</span>
            <span class="badge text-bg-<%= @slack_user.is_owner? ? 'success' : 'secondary' %>">Owner</span>
            <span class="badge text-bg-<%= @slack_user.is_bot? ? 'warning' : 'secondary' %>">Bot</span>
            <span class="badge text-bg-<%= @slack_user.deleted? ? 'secondary' : 'success' %>">Status</span>
          </dd>

          <dt class="col-sm-3 text-secondary">User</dt>
          <dd class="col-sm-9">
            <% if @slack_user.user.present? %>
              <%= link_to @slack_user.user.display_name, user_path(@slack_user.user), class: "text-decoration-none" %>
            <% else %>
              <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#linkUserModal">
                Link User
              </button>
            <% end %>
          </dd>

          <dt class="col-sm-3 text-secondary">Last synced</dt>
          <dd class="col-sm-9"><%= @slack_user.last_synced_at ? l(@slack_user.last_synced_at, format: :long) : "Never" %></dd>
        </dl>
      </div>
      <div class="col-md-4">
        <% image_url = @slack_user.raw_attributes.dig("profile", "image_192") %>
        <% if image_url.present? %>
          <div class="text-center">
            <img src="<%= image_url %>" alt="<%= @slack_user.display_name %>" class="img-fluid rounded" style="max-width: 192px; max-height: 192px;">
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="card shadow-sm border-0">
  <div class="card-body">
    <h2 class="h6 mb-3">Attributes</h2>
    <pre class="bg-body-secondary rounded p-3 mb-0"><code class="text-body"><%= JSON.pretty_generate(@slack_user.raw_attributes) %></code></pre>
  </div>
</div>

<% if @slack_user.user.nil? %>
  <!-- Link User Modal -->
  <div class="modal fade" id="linkUserModal" tabindex="-1" aria-labelledby="linkUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="linkUserModalLabel">Link User to Slack User</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <%= form_with url: link_user_slack_user_path(@slack_user), method: :post, local: true do |f| %>
          <div class="modal-body">
            <p class="mb-3">Select a user to link to this Slack user. The user's Slack information will be updated.</p>
            <div class="mb-3">
              <label for="user_search" class="form-label">Search Users</label>
              <input type="text" id="user_search" class="form-control mb-2" placeholder="Type to search users…" autocomplete="off">
            </div>
            <div class="mb-3">
              <label class="form-label">Select User</label>
              <div id="user_list" class="border rounded" style="max-height: 300px; overflow-y: auto;">
                <% @all_users.each do |user| %>
                  <div class="user-item p-2 border-bottom" data-user-id="<%= user.id %>" data-user-name="<%= user.display_name.downcase %>" style="cursor: pointer;">
                    <input type="radio" name="user_id" id="user_<%= user.id %>" value="<%= user.id %>" class="form-check-input me-2" required>
                    <label for="user_<%= user.id %>" class="form-check-label mb-0" style="cursor: pointer;">
                      <%= user.display_name %>
                    </label>
                  </div>
                <% end %>
              </div>
              <div id="no_results" class="text-muted text-center p-3" style="display: none;">
                No users found matching your search.
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <%= f.submit "Link User", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <script>
    (function() {
      const modal = document.getElementById('linkUserModal');
      if (!modal) return;
      
      let searchHandler = null;
      
      function filterUsers() {
        const searchInput = document.getElementById('user_search');
        const userList = document.getElementById('user_list');
        const noResults = document.getElementById('no_results');
        
        if (!searchInput || !userList) return;
        
        const searchTerm = searchInput.value.toLowerCase().trim();
        const userItems = userList.querySelectorAll('.user-item');
        let visibleCount = 0;
        
        userItems.forEach(function(item) {
          const userName = item.getAttribute('data-user-name');
          if (userName && userName.includes(searchTerm)) {
            item.style.display = '';
            visibleCount++;
          } else {
            item.style.display = 'none';
          }
        });
        
        if (visibleCount === 0 && searchTerm !== '') {
          userList.style.display = 'none';
          if (noResults) {
            noResults.style.display = 'block';
          }
        } else {
          userList.style.display = 'block';
          if (noResults) {
            noResults.style.display = 'none';
          }
        }
      }
      
      function resetSearch() {
        const searchInput = document.getElementById('user_search');
        const userList = document.getElementById('user_list');
        const noResults = document.getElementById('no_results');
        
        if (searchInput) {
          searchInput.value = '';
        }
        if (userList) {
          const userItems = userList.querySelectorAll('.user-item');
          userItems.forEach(function(item) {
            item.style.display = '';
          });
          userList.style.display = 'block';
        }
        if (noResults) {
          noResults.style.display = 'none';
        }
      }
      
      function setupClickHandlers() {
        const userList = document.getElementById('user_list');
        if (!userList) return;
        
        const userItems = userList.querySelectorAll('.user-item');
        userItems.forEach(function(item) {
          item.addEventListener('click', function(e) {
            if (e.target.type !== 'radio' && e.target.tagName !== 'LABEL') {
              const radio = item.querySelector('input[type="radio"]');
              if (radio) {
                radio.checked = true;
              }
            }
          });
        });
      }
      
      modal.addEventListener('show.bs.modal', function() {
        resetSearch();
        
        const searchInput = document.getElementById('user_search');
        if (searchInput) {
          // Remove old handler if it exists
          if (searchHandler) {
            searchInput.removeEventListener('input', searchHandler);
          }
          
          // Create new handler
          searchHandler = function() {
            filterUsers();
          };
          
          // Add new handler
          searchInput.addEventListener('input', searchHandler);
        }
        
        setupClickHandlers();
      });
      
      // Setup on page load if modal exists
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', function() {
          setupClickHandlers();
        });
      } else {
        setupClickHandlers();
      }
    })();
  </script>
<% end %>

