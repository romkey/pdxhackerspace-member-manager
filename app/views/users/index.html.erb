<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Members</h1>
    <p class="text-muted mb-0">Synced from Authentik group.</p>
    <p class="text-muted mb-0">
      <strong><%= @user_count %></strong> members —
      <%= link_to users_path(active: 'true'), class: "text-decoration-none" do %>
        <strong><%= @active_count %></strong> active
      <% end %>,
      <%= link_to users_path(active: 'false'), class: "text-decoration-none" do %>
        <strong><%= @inactive_count %></strong> inactive
      <% end %>
    </p>
  </div>
  <div class="d-flex gap-2">
    <%= button_to "Sync now", sync_users_path, method: :post, class: "btn btn-primary", data: { turbo: false } %>
  </div>
</div>

<% if @filter_active %>
  <div class="alert alert-info d-flex justify-content-between align-items-center mb-4">
    <div>
      <i class="bi bi-funnel me-2"></i>
      Showing <strong><%= @filtered_count %></strong> of <%= @user_count %> members
      <% if params[:membership_status].present? %>
        — Membership: <strong><%= params[:membership_status].humanize %></strong>
      <% end %>
      <% if params[:payment_type].present? %>
        — Payment: <strong><%= params[:payment_type].humanize %></strong>
      <% end %>
      <% if params[:dues_status].present? %>
        — Dues: <strong><%= params[:dues_status].humanize %></strong>
      <% end %>
      <% if params[:active].present? %>
        — <%= params[:active] == 'true' ? 'Active only' : 'Inactive only' %>
      <% end %>
    </div>
    <%= link_to "Clear filters", users_path(sort: @sort_column, direction: @sort_direction), class: "btn btn-outline-secondary btn-sm" %>
  </div>
<% end %>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <p class="small text-muted mb-3"><i class="bi bi-hand-index me-1"></i> Click any badge to filter the list</p>
    
    <h2 class="h6 mb-3">Membership Status</h2>
    <div class="d-flex flex-wrap gap-2 mb-3">
      <%= link_to users_path(membership_status: 'unknown'), class: "badge text-bg-secondary text-decoration-none #{'border border-dark border-2' if params[:membership_status] == 'unknown'}" do %>
        Unknown: <strong><%= @membership_status_unknown %></strong>
      <% end %>
      <%= link_to users_path(membership_status: 'sponsored'), class: "badge text-bg-primary text-decoration-none #{'border border-dark border-2' if params[:membership_status] == 'sponsored'}" do %>
        Sponsored: <strong><%= @membership_status_sponsored %></strong>
      <% end %>
      <%= link_to users_path(membership_status: 'paying'), class: "badge text-bg-success text-decoration-none #{'border border-dark border-2' if params[:membership_status] == 'paying'}" do %>
        Paying: <strong><%= @membership_status_paying %></strong>
      <% end %>
      <%= link_to users_path(membership_status: 'applicant'), class: "badge text-bg-light text-dark text-decoration-none #{'border border-dark border-2' if params[:membership_status] == 'applicant'}" do %>
        Applicant: <strong><%= @membership_status_applicant %></strong>
      <% end %>
      <%= link_to users_path(membership_status: 'banned'), class: "badge text-bg-danger text-decoration-none #{'border border-dark border-2' if params[:membership_status] == 'banned'}" do %>
        Banned: <strong><%= @membership_status_banned %></strong>
      <% end %>
      <%= link_to users_path(membership_status: 'deceased'), class: "badge text-bg-dark text-decoration-none #{'border border-dark border-2' if params[:membership_status] == 'deceased'}" do %>
        Deceased: <strong><%= @membership_status_deceased %></strong>
      <% end %>
    </div>
    
    <h2 class="h6 mb-3">Payment Type</h2>
    <div class="d-flex flex-wrap gap-2 mb-3">
      <%= link_to users_path(payment_type: 'unknown'), class: "badge text-bg-secondary text-decoration-none #{'border border-dark border-2' if params[:payment_type] == 'unknown'}" do %>
        Unknown: <strong><%= @payment_type_unknown %></strong>
      <% end %>
      <%= link_to users_path(payment_type: 'sponsored'), class: "badge text-bg-primary text-decoration-none #{'border border-dark border-2' if params[:payment_type] == 'sponsored'}" do %>
        Sponsored: <strong><%= @payment_type_sponsored %></strong>
      <% end %>
      <%= link_to users_path(payment_type: 'paypal'), class: "badge text-bg-info text-decoration-none #{'border border-dark border-2' if params[:payment_type] == 'paypal'}" do %>
        PayPal: <strong><%= @payment_type_paypal %></strong>
      <% end %>
      <%= link_to users_path(payment_type: 'recharge'), class: "badge text-bg-info text-decoration-none #{'border border-dark border-2' if params[:payment_type] == 'recharge'}" do %>
        Recharge: <strong><%= @payment_type_recharge %></strong>
      <% end %>
      <%= link_to users_path(payment_type: 'cash'), class: "badge text-bg-info text-decoration-none #{'border border-dark border-2' if params[:payment_type] == 'cash'}" do %>
        Cash: <strong><%= @payment_type_cash %></strong>
      <% end %>
    </div>
    
    <h2 class="h6 mb-3">Dues Status</h2>
    <div class="d-flex flex-wrap gap-2">
      <%= link_to users_path(dues_status: 'current'), class: "badge text-bg-success text-decoration-none #{'border border-dark border-2' if params[:dues_status] == 'current'}" do %>
        Current: <strong><%= @dues_status_current %></strong>
      <% end %>
      <%= link_to users_path(dues_status: 'lapsed'), class: "badge text-bg-warning text-decoration-none #{'border border-dark border-2' if params[:dues_status] == 'lapsed'}" do %>
        Lapsed: <strong><%= @dues_status_lapsed %></strong>
      <% end %>
      <%= link_to users_path(dues_status: 'inactive'), class: "badge text-bg-secondary text-decoration-none #{'border border-dark border-2' if params[:dues_status] == 'inactive'}" do %>
        Inactive: <strong><%= @dues_status_inactive %></strong>
      <% end %>
      <%= link_to users_path(dues_status: 'unknown'), class: "badge text-bg-secondary text-decoration-none #{'border border-dark border-2' if params[:dues_status] == 'unknown'}" do %>
        Unknown: <strong><%= @dues_status_unknown %></strong>
      <% end %>
    </div>
  </div>
</div>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <div class="d-flex gap-2">
      <input type="text" id="user_search" class="form-control" placeholder="Search by name, email, or Authentik ID…" autocomplete="off" value="<%= params[:q] %>">
      <button type="button" id="clear_search" class="btn btn-outline-secondary" style="<%= params[:q].present? ? '' : 'display: none;' %>">Clear</button>
    </div>
  </div>
</div>

<div class="card shadow-sm border-0">
  <div class="table-responsive">
    <table class="table mb-0 align-middle">
      <thead class="bg-body-tertiary">
        <tr>
          <th scope="col" style="width: 48px;"></th>
          <th scope="col"><%= sortable_column('username', 'Username', @sort_column, @sort_direction) %></th>
          <th scope="col"><%= sortable_column('full_name', 'Name', @sort_column, @sort_direction) %></th>
          <th scope="col"><%= sortable_column('email', 'Email', @sort_column, @sort_direction) %></th>
          <th scope="col"><%= sortable_column('membership_status', 'Status', @sort_column, @sort_direction) %></th>
          <th scope="col"><%= sortable_column('payment_type', 'Payment Type', @sort_column, @sort_direction) %></th>
          <th scope="col"><%= sortable_column('last_synced_at', 'Last synced', @sort_column, @sort_direction) %></th>
        </tr>
      </thead>
      <tbody id="users_table_body">
        <% @users.each do |user| %>
          <tr class="user-row" 
              data-search-text="<%= [user.username, user.display_name, user.email, user.authentik_id].compact.join(' ').downcase %>">
            <td>
              <%= link_to user_path(user) do %>
                <% if user.avatar.present? %>
                  <img src="<%= user.avatar %>" alt="<%= user.display_name %>" style="width: 32px; height: 32px; border-radius: 4px;">
                <% elsif user.email.present? %>
                  <img src="<%= gravatar_url(user.email, size: 32) %>" alt="<%= user.display_name %>" style="width: 32px; height: 32px; border-radius: 4px;">
                <% else %>
                  <div style="width: 32px; height: 32px; border-radius: 4px; background-color: #dee2e6; display: inline-block;"></div>
                <% end %>
              <% end %>
            </td>
            <td class="small text-monospace text-secondary fw-semibold"><%= link_to user.username, user_path(user), class: "text-decoration-none text-secondary" %></td>
            <td class="fw-semibold">
              <%= link_to user.display_name, user_path(user), class: "text-decoration-none" %>
            </td>
            <td>
              <% if user.email.present? %>
                <%= mail_to user.email %>
              <% else %>
                <span class="text-muted fst-italic">Not provided</span>
              <% end %>
            </td>
            <td>
              <% badge_class = case user.membership_status
                 when "paying" then "success"
                 when "guest" then "warning"
                 when "banned" then "danger"
                 when "deceased" then "dark"
                 when "sponsored" then "primary"
                 when "applicant" then "light text-dark"
                 when "cancelled" then "secondary"
                 when "unknown" then "secondary"
                 else "secondary"
                 end %>
              <span class="badge text-bg-<%= badge_class %>">
                <%= user.membership_status.humanize %>
              </span>
              <% if user.active? %>
                <span class="badge text-bg-success ms-1">Active</span>
              <% end %>
            </td>
            <td>
              <span class="badge text-bg-info"><%= user.payment_type.humanize %></span>
            </td>
            <td><%= user.last_synced_at ? l(user.last_synced_at, format: :long) : "n/a" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
  (function() {
    const searchInput = document.getElementById('user_search');
    const clearButton = document.getElementById('clear_search');
    const tableBody = document.getElementById('users_table_body');
    
    if (!searchInput || !tableBody) return;
    
    function filterUsers() {
      const searchTerm = searchInput.value.toLowerCase().trim();
      const rows = tableBody.querySelectorAll('.user-row');
      let visibleCount = 0;
      
      rows.forEach(function(row) {
        const searchText = row.getAttribute('data-search-text');
        if (searchText && searchText.includes(searchTerm)) {
          row.style.display = '';
          visibleCount++;
        } else {
          row.style.display = 'none';
        }
      });
      
      // Show/hide clear button
      if (clearButton) {
        if (searchTerm !== '') {
          clearButton.style.display = '';
        } else {
          clearButton.style.display = 'none';
        }
      }
    }
    
    searchInput.addEventListener('input', filterUsers);
    
    if (clearButton) {
      clearButton.addEventListener('click', function() {
        searchInput.value = '';
        filterUsers();
        searchInput.focus();
      });
    }
    
    // Initial filter if there's a value in the search box
    if (searchInput.value) {
      filterUsers();
    }
  })();
</script>

