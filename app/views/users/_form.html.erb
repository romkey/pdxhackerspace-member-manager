<%= form_with model: @user, local: true, class: "vstack gap-3" do |f| %>
  <div>
    <%= f.label :full_name, class: "form-label" %>
    <%= f.text_field :full_name, class: "form-control" %>
  </div>

  <div>
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div>
    <%= f.label :membership_status, "Membership Status", class: "form-label" %>
    <%= f.select :membership_status, 
        options_for_select([
          ["Active", "active"],
          ["Inactive", "inactive"],
          ["Paused", "paused"],
          ["Banned", "banned"],
          ["Non-entity", "non-entity"],
          ["Deceased", "deceased"]
        ], @user.membership_status),
        {},
        { class: "form-select" } %>
  </div>

  <div>
    <%= f.label :payment_type, class: "form-label" %>
    <%= f.select :payment_type, 
        options_for_select([
          ["Unknown", "unknown"],
          ["Sponsored", "sponsored"],
          ["PayPal", "paypal"],
          ["Recharge", "recharge"],
          ["Cash", "cash"],
          ["Inactive", "inactive"]
        ], @user.payment_type),
        {},
        { class: "form-select" } %>
  </div>

  <div>
    <%= f.label :notes, class: "form-label" %>
    <%= f.text_area :notes, class: "form-control", rows: 4 %>
  </div>

  <div>
    <%= f.label :rfid, "RFID", class: "form-label" %>
    <%= text_area_tag "user[rfid]", (@user.rfid || []).join("\n"), class: "form-control", rows: 3, placeholder: "Enter one RFID per line" %>
    <div class="form-text">Enter one RFID per line. Leave empty if none.</div>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit "Save", class: "btn btn-primary" %>
    <%= link_to "Cancel", user_path(@user), class: "btn btn-outline-secondary" %>
  </div>
<% end %>


