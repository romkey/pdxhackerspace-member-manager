<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Email Templates</h1>
    <p class="text-muted mb-0">Manage the email messages sent to members.</p>
  </div>
  <div class="d-flex gap-2">
    <%= button_to "Seed Defaults", seed_email_templates_path, method: :post, class: "btn btn-outline-secondary", data: { turbo_confirm: "This will create any missing default templates. Existing templates will not be modified. Continue?" } %>
    <%= link_to "Back to Settings", settings_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <h2 class="h6 mb-3">Available Template Variables</h2>
    <div class="row">
      <% EmailTemplate::AVAILABLE_VARIABLES.each do |var, desc| %>
        <div class="col-md-6 col-lg-4 mb-2">
          <code class="text-primary"><%= var %></code>
          <span class="text-muted small ms-1">â€” <%= desc %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if @email_templates.any? %>
  <div class="card shadow-sm border-0">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th>Template</th>
            <th>Subject</th>
            <th>Status</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @email_templates.each do |template| %>
            <tr class="<%= 'table-secondary' unless template.enabled? %>">
              <td>
                <div class="fw-semibold"><%= template.name %></div>
                <% if template.description.present? %>
                  <div class="text-muted small"><%= template.description %></div>
                <% end %>
                <div class="text-muted small">Key: <code><%= template.key %></code></div>
              </td>
              <td>
                <span class="text-truncate d-inline-block" style="max-width: 300px;">
                  <%= template.subject %>
                </span>
              </td>
              <td>
                <% if template.enabled? %>
                  <span class="badge text-bg-success">Enabled</span>
                <% else %>
                  <span class="badge text-bg-secondary">Disabled</span>
                <% end %>
              </td>
              <td class="text-end">
                <div class="btn-group btn-group-sm">
                  <%= link_to "Preview", preview_email_template_path(template), class: "btn btn-outline-info", target: "_blank" %>
                  <%= link_to "Edit", edit_email_template_path(template), class: "btn btn-outline-primary" %>
                  <%= button_to template.enabled? ? "Disable" : "Enable", 
                      toggle_email_template_path(template), 
                      method: :post, 
                      class: "btn btn-outline-#{template.enabled? ? 'warning' : 'success'}" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="card shadow-sm border-0">
    <div class="card-body text-center py-5">
      <p class="text-muted mb-3">No email templates found.</p>
      <%= button_to "Create Default Templates", seed_email_templates_path, method: :post, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
