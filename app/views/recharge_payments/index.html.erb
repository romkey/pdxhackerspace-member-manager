<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Recharge Payments</h1>
    <p class="text-muted mb-0">
      <strong><%= @payment_count %></strong> records —
      Total <strong>$<%= number_to_currency(@total_amount || 0, unit: "") %> USD</strong>
    </p>
  </div>
  <div class="d-flex gap-2">
    <%= link_to "Export JSON", export_recharge_payments_path, class: "btn btn-outline-primary", data: { turbo: false } %>
    <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#importModal">Import JSON</button>
    <%= button_to "Sync now", sync_recharge_payments_path, method: :post, class: "btn btn-primary", data: { turbo: false } %>
    <%= link_to "Test", test_recharge_payments_path, class: "btn btn-outline-secondary" %>
  </div>
</div>

<% if @filter_active %>
  <div class="alert alert-info py-2 mb-3 d-flex justify-content-between align-items-center">
    <small>
      <i class="bi bi-funnel me-1"></i> Filtering:
      <%= params[:linked] == 'yes' ? 'Linked' : 'Unlinked' %> payments
      (<%= @payment_count %> of <%= @total_count %>)
    </small>
    <%= link_to "Clear filter", recharge_payments_path, class: "btn btn-outline-secondary btn-sm" %>
  </div>
<% end %>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <p class="small text-muted mb-3"><i class="bi bi-hand-index me-1"></i> Click any badge to filter the list</p>
    
    <div class="d-flex flex-wrap gap-2">
      <%= link_to recharge_payments_path, class: "badge text-bg-secondary text-decoration-none #{'border border-dark border-2' if !@filter_active}" do %>
        All: <strong><%= @total_count %></strong>
      <% end %>
      <%= link_to recharge_payments_path(linked: 'yes'), class: "badge text-bg-success text-decoration-none #{'border border-dark border-2' if params[:linked] == 'yes'}" do %>
        Linked: <strong><%= @linked_count %></strong>
      <% end %>
      <%= link_to recharge_payments_path(linked: 'no'), class: "badge text-bg-warning text-decoration-none #{'border border-dark border-2' if params[:linked] == 'no'}" do %>
        Unlinked: <strong><%= @unlinked_count %></strong>
      <% end %>
    </div>
  </div>
</div>

<!-- Import Modal -->
<div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="importModalLabel">Import Recharge Payments from JSON</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with url: import_recharge_payments_path, method: :post, multipart: true, local: true do |f| %>
        <div class="modal-body">
          <p class="text-muted">Select a JSON backup file to import. This will update existing payments and create new ones based on <code>recharge_id</code>.</p>
          <div class="mb-3">
            <%= f.file_field :file, accept: 'application/json', class: "form-control", required: true %>
          </div>
          <div class="alert alert-warning mb-0">
            <strong>Warning:</strong> This operation will modify the database. Existing payments with matching <code>recharge_id</code> will be updated.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= f.submit "Import", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <div class="d-flex gap-2">
      <input type="text" id="recharge_search" class="form-control" placeholder="Search by charge ID, customer name, email, or status…" autocomplete="off">
      <button type="button" id="clear_recharge_search" class="btn btn-outline-secondary" style="display: none;">Clear</button>
    </div>
  </div>
</div>

<div class="card shadow-sm border-0">
  <div class="table-responsive">
    <table class="table mb-0 align-middle">
      <thead class="bg-body-tertiary">
        <tr>
          <th scope="col">Charge</th>
          <th scope="col">Status</th>
          <th scope="col">Amount</th>
          <th scope="col">Customer</th>
          <th scope="col">Linked User</th>
          <th scope="col">Processed</th>
        </tr>
      </thead>
      <tbody id="recharge_payments_table_body">
        <% @payments.includes(:user).each do |payment| %>
          <tr class="recharge-payment-row" 
              data-search-text="<%= [
                payment.recharge_id,
                payment.customer_name,
                payment.customer_email,
                payment.status.presence || "unknown",
                payment.amount_with_currency,
                payment.user&.display_name,
                payment.user_id.present? ? "linked" : "unlinked"
              ].compact.join(' ').downcase %>">
            <td class="fw-semibold"><%= link_to payment.recharge_id, recharge_payment_path(payment) %></td>
            <td><span class="badge text-bg-secondary"><%= payment.status.presence || "Unknown" %></span></td>
            <td><%= payment.amount_with_currency || "—" %></td>
            <td>
              <% if payment.customer_name.present? %>
                <div><%= payment.customer_name %></div>
              <% end %>
              <% if payment.customer_email.present? %>
                <div class="text-muted small"><%= payment.customer_email %></div>
              <% end %>
            </td>
            <td>
              <% if payment.user.present? %>
                <%= link_to payment.user.display_name, user_path(payment.user), class: "text-decoration-none" %>
              <% else %>
                <span class="text-muted fst-italic">Not linked</span>
              <% end %>
            </td>
            <td><%= payment.processed_at ? l(payment.processed_at, format: :long) : "n/a" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
  (function() {
    const searchInput = document.getElementById('recharge_search');
    const clearButton = document.getElementById('clear_recharge_search');
    const tableBody = document.getElementById('recharge_payments_table_body');
    
    if (!searchInput || !tableBody) return;
    
    function filterPayments() {
      const searchTerm = searchInput.value.toLowerCase().trim();
      const rows = tableBody.querySelectorAll('.recharge-payment-row');
      
      rows.forEach(function(row) {
        const searchText = row.getAttribute('data-search-text');
        if (searchText && searchText.includes(searchTerm)) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
      
      // Show/hide clear button
      if (clearButton) {
        if (searchTerm !== '') {
          clearButton.style.display = '';
        } else {
          clearButton.style.display = 'none';
        }
      }
    }
    
    searchInput.addEventListener('input', filterPayments);
    
    if (clearButton) {
      clearButton.addEventListener('click', function() {
        searchInput.value = '';
        filterPayments();
        searchInput.focus();
      });
    }
  })();
</script>

