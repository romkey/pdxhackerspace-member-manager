<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0">Recharge Payments Test</h1>
  <%= link_to "&larr; Back to Recharge Payments".html_safe, recharge_payments_path, class: "text-decoration-none" %>
</div>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <h2 class="h5 mb-3">Summary</h2>
    <div class="row">
      <div class="col-md-4">
        <p class="mb-2">
          <strong>Total Payments:</strong>
          <span class="badge text-bg-info"><%= @total_payments %></span>
        </p>
      </div>
      <div class="col-md-4">
        <p class="mb-2">
          <strong>Matched to Users:</strong>
          <span class="badge text-bg-success"><%= @matched_count %></span>
        </p>
      </div>
      <div class="col-md-4">
        <p class="mb-2">
          <strong>Unmatched Payments:</strong>
          <span class="badge text-bg-danger"><%= @unmatched_payments.count %></span>
        </p>
      </div>
    </div>
  </div>
</div>

<% if @unmatched_payments.any? %>
  <div class="card shadow-sm border-0">
    <div class="card-body">
      <h2 class="h5 mb-3">Unmatched Payments</h2>
      <p class="text-muted small mb-3">Payments that don't have a matching User record by Recharge customer ID</p>
      
      <div class="table-responsive">
        <table class="table table-sm align-middle mb-0">
          <thead class="bg-body-tertiary">
            <tr>
              <th scope="col">Payment ID</th>
              <th scope="col">Customer ID</th>
              <th scope="col">Customer Name</th>
              <th scope="col">Customer Email</th>
              <th scope="col">Processed</th>
            </tr>
          </thead>
          <tbody>
            <% @unmatched_payments.each do |unmatched| %>
              <tr>
                <td>
                  <strong><%= link_to unmatched[:payment].recharge_id, recharge_payment_path(unmatched[:payment]), class: "text-decoration-none" %></strong>
                </td>
                <td><%= unmatched[:customer_id].presence || "—" %></td>
                <td><%= unmatched[:name].presence || "—" %></td>
                <td>
                  <% if unmatched[:email].present? %>
                    <%= mail_to unmatched[:email] %>
                  <% else %>
                    —
                  <% end %>
                </td>
                <td>
                  <%= unmatched[:payment].processed_at ? l(unmatched[:payment].processed_at, format: :long) : "n/a" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <p class="text-muted small mt-3 mb-0"><strong><%= @unmatched_payments.count %></strong> unmatched payment<%= @unmatched_payments.count == 1 ? '' : 's' %></p>
    </div>
  </div>
<% else %>
  <div class="alert alert-success">
    <strong>Great!</strong> All Recharge payments have matching User records by customer ID.
  </div>
<% end %>


