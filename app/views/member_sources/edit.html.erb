<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Edit <%= @member_source.name %></h1>
    <p class="text-muted mb-0">Update member source settings.</p>
  </div>
  <div>
    <%= link_to "Cancel", member_sources_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card shadow-sm border-0">
      <div class="card-body">
        <%= form_with model: @member_source, local: true do |f| %>
          <% if @member_source.errors.any? %>
            <div class="alert alert-danger">
              <h5 class="alert-heading">Please fix the following errors:</h5>
              <ul class="mb-0">
                <% @member_source.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :display_order, class: "form-label" %>
            <%= f.number_field :display_order, class: "form-control", min: 0 %>
            <div class="form-text">Lower numbers appear first in lists.</div>
          </div>

          <div class="mb-3">
            <%= f.label :notes, class: "form-label" %>
            <%= f.text_area :notes, class: "form-control", rows: 4 %>
            <div class="form-text">Admin notes about this member source.</div>
          </div>

          <div class="mb-4">
            <div class="form-check">
              <%= f.check_box :enabled, class: "form-check-input" %>
              <%= f.label :enabled, "Enabled", class: "form-check-label" %>
            </div>
            <div class="form-text">Disabled sources will not be synced automatically.</div>
          </div>

          <div class="d-flex gap-2">
            <%= f.submit "Save Changes", class: "btn btn-primary" %>
            <%= link_to "Cancel", member_sources_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card shadow-sm border-0 mb-3">
      <div class="card-header bg-light">
        <h5 class="card-title mb-0">Info</h5>
      </div>
      <div class="card-body">
        <dl class="mb-0">
          <dt>Key</dt>
          <dd><code><%= @member_source.key %></code></dd>

          <dt>API Configured</dt>
          <dd>
            <% if @member_source.api_configured? %>
              <span class="badge text-bg-success">Yes</span>
            <% else %>
              <span class="badge text-bg-warning">No</span>
            <% end %>
          </dd>

          <dt>Created</dt>
          <dd><%= l(@member_source.created_at, format: :long) %></dd>

          <dt>Last Updated</dt>
          <dd><%= l(@member_source.updated_at, format: :long) %></dd>
        </dl>
      </div>
    </div>

    <div class="card shadow-sm border-0">
      <div class="card-header bg-light">
        <h5 class="card-title mb-0">Statistics</h5>
      </div>
      <div class="card-body">
        <dl class="mb-0">
          <dt>Total Entries</dt>
          <dd><%= number_with_delimiter(@member_source.entry_count) %></dd>

          <dt>Linked</dt>
          <dd class="text-success"><%= number_with_delimiter(@member_source.linked_count) %></dd>

          <dt>Unlinked</dt>
          <dd class="<%= 'text-warning' if @member_source.unlinked_count > 0 %>">
            <%= number_with_delimiter(@member_source.unlinked_count) %>
          </dd>

          <dt>Last Sync</dt>
          <dd><%= @member_source.last_sync_at ? l(@member_source.last_sync_at, format: :long) : "Never" %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>
