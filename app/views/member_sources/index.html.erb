<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-1">Member Sources</h1>
    <p class="text-muted mb-0">Track and manage sources of membership information.</p>
  </div>
  <div class="d-flex gap-2">
    <%= button_to "Refresh All Stats", refresh_all_member_sources_path, method: :post, class: "btn btn-outline-primary" %>
    <%= button_to "Seed Defaults", seed_member_sources_path, method: :post, class: "btn btn-outline-secondary", data: { turbo_confirm: "Create any missing default sources?" } %>
    <%= link_to "Back to Settings", settings_path, class: "btn btn-secondary" %>
  </div>
</div>

<% if @member_sources.any? %>
  <div class="row g-4">
    <% @member_sources.each do |source| %>
      <div class="col-md-6">
        <div class="card shadow-sm border-0 h-100 <%= 'bg-light' unless source.enabled? %>">
          <div class="card-body">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-start mb-3">
              <div>
                <h5 class="card-title mb-1"><%= source.name %></h5>
                <div class="d-flex gap-2">
                  <% if source.api_configured? %>
                    <span class="badge text-bg-success">API Configured</span>
                  <% else %>
                    <span class="badge text-bg-warning">API Not Configured</span>
                  <% end %>
                  <% unless source.enabled? %>
                    <span class="badge text-bg-secondary">Disabled</span>
                  <% end %>
                </div>
              </div>
              <div class="btn-group btn-group-sm">
                <%= link_to "Edit", edit_member_source_path(source), class: "btn btn-outline-secondary" %>
                <%= button_to source.enabled? ? "Disable" : "Enable", 
                    toggle_member_source_path(source), 
                    method: :post, 
                    class: "btn btn-outline-#{source.enabled? ? 'warning' : 'success'}" %>
              </div>
            </div>

            <!-- Statistics -->
            <div class="row g-3">
              <div class="col-4 text-center">
                <div class="border rounded p-2">
                  <div class="h4 mb-0"><%= number_with_delimiter(source.entry_count) %></div>
                  <div class="text-muted small">Total</div>
                </div>
              </div>
              <div class="col-4 text-center">
                <div class="border rounded p-2 border-success">
                  <div class="h4 mb-0 text-success"><%= number_with_delimiter(source.linked_count) %></div>
                  <div class="text-muted small">Linked</div>
                </div>
              </div>
              <div class="col-4 text-center">
                <div class="border rounded p-2 <%= 'border-warning' if source.unlinked_count > 0 %>">
                  <div class="h4 mb-0 <%= 'text-warning' if source.unlinked_count > 0 %>"><%= number_with_delimiter(source.unlinked_count) %></div>
                  <div class="text-muted small">Unlinked</div>
                </div>
              </div>
            </div>

            <!-- Last Sync -->
            <div class="mt-3 pt-3 border-top d-flex justify-content-between align-items-center">
              <div class="text-muted small">
                <strong>Last Sync:</strong>
                <%= source.last_sync_at ? time_ago_in_words(source.last_sync_at) + " ago" : "Never" %>
              </div>
              <%= button_to "Refresh", refresh_stats_member_source_path(source), method: :post, class: "btn btn-sm btn-outline-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Summary -->
  <div class="card shadow-sm border-0 mt-4">
    <div class="card-body">
      <h5 class="card-title">Summary</h5>
      <div class="row text-center">
        <div class="col-md-3">
          <div class="h3 mb-0"><%= number_with_delimiter(@member_sources.sum(&:entry_count)) %></div>
          <div class="text-muted">Total Entries</div>
        </div>
        <div class="col-md-3">
          <div class="h3 mb-0 text-success"><%= number_with_delimiter(@member_sources.sum(&:linked_count)) %></div>
          <div class="text-muted">Total Linked</div>
        </div>
        <div class="col-md-3">
          <% total_unlinked = @member_sources.sum(&:unlinked_count) %>
          <div class="h3 mb-0 <%= 'text-warning' if total_unlinked > 0 %>"><%= number_with_delimiter(total_unlinked) %></div>
          <div class="text-muted">Need Reconciliation</div>
        </div>
        <div class="col-md-3">
          <div class="h3 mb-0"><%= @member_sources.count(&:api_configured?) %>/<%= @member_sources.count %></div>
          <div class="text-muted">APIs Configured</div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="card shadow-sm border-0">
    <div class="card-body text-center py-5">
      <p class="text-muted mb-3">No member sources configured.</p>
      <%= button_to "Create Default Sources", seed_member_sources_path, method: :post, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
