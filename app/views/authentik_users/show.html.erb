<div class="mb-4 d-flex justify-content-between align-items-center">
  <div class="d-flex gap-2 align-items-center">
    <% if @previous_authentik_user %>
      <%= link_to authentik_user_path(@previous_authentik_user), class: "btn btn-outline-secondary", title: "Previous: #{@previous_authentik_user.display_name}" do %>
        <i class="bi bi-chevron-left"></i> Previous
      <% end %>
    <% else %>
      <span class="btn btn-outline-secondary disabled" title="First user">
        <i class="bi bi-chevron-left"></i> Previous
      </span>
    <% end %>
    
    <% if @next_authentik_user %>
      <%= link_to authentik_user_path(@next_authentik_user), class: "btn btn-outline-secondary", title: "Next: #{@next_authentik_user.display_name}" do %>
        Next <i class="bi bi-chevron-right"></i>
      <% end %>
    <% else %>
      <span class="btn btn-outline-secondary disabled" title="Last user">
        Next <i class="bi bi-chevron-right"></i>
      </span>
    <% end %>
  </div>
  
  <div>
    <%= link_to "&larr; Back to Authentik users".html_safe, authentik_users_path, class: "text-decoration-none" %>
  </div>
</div>

<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start mb-3">
      <h1 class="h4 mb-0"><%= @authentik_user.display_name %></h1>
      <div class="d-flex gap-2">
        <% if @authentik_user.is_active? %>
          <span class="badge text-bg-success">Active</span>
        <% else %>
          <span class="badge text-bg-secondary">Inactive</span>
        <% end %>
        <% if @authentik_user.is_superuser? %>
          <span class="badge text-bg-info">Superuser</span>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <dl class="row mb-0">
          <dt class="col-sm-4 text-secondary">Authentik ID</dt>
          <dd class="col-sm-8"><code><%= @authentik_user.authentik_id %></code></dd>

          <dt class="col-sm-4 text-secondary">Email</dt>
          <dd class="col-sm-8">
            <% if @authentik_user.email.present? %>
              <%= mail_to @authentik_user.email %>
            <% else %>
              <span class="text-muted fst-italic">Not provided</span>
            <% end %>
          </dd>

          <dt class="col-sm-4 text-secondary">Full Name</dt>
          <dd class="col-sm-8"><%= @authentik_user.full_name.presence || "—" %></dd>

          <dt class="col-sm-4 text-secondary">Username</dt>
          <dd class="col-sm-8"><%= @authentik_user.username.presence || "—" %></dd>

          <dt class="col-sm-4 text-secondary">Linked User</dt>
          <dd class="col-sm-8">
            <% if @authentik_user.user.present? %>
              <%= link_to @authentik_user.user.display_name, user_path(@authentik_user.user), class: "text-decoration-none" %>
            <% else %>
              <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#linkUserModal">
                Link User
              </button>
            <% end %>
          </dd>

          <dt class="col-sm-4 text-secondary">Last Synced</dt>
          <dd class="col-sm-8">
            <% if @authentik_user.last_synced_at %>
              <%= l(@authentik_user.last_synced_at, format: :long) %>
              <span class="text-muted">(<%= time_ago_in_words(@authentik_user.last_synced_at) %> ago)</span>
            <% else %>
              <span class="text-muted fst-italic">Never</span>
            <% end %>
          </dd>
        </dl>
      </div>
    </div>
  </div>
</div>

<% if @authentik_user.user && @authentik_user.has_discrepancies? %>
  <div class="card shadow-sm border-0 mb-4 border-warning">
    <div class="card-header bg-warning text-dark">
      <h2 class="h6 mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Discrepancies Detected</h2>
    </div>
    <div class="card-body">
      <p class="mb-3">The following fields differ between Authentik and MemberManager:</p>
      <table class="table table-sm mb-3">
        <thead>
          <tr>
            <th>Field</th>
            <th>Authentik Value</th>
            <th>MemberManager Value</th>
          </tr>
        </thead>
        <tbody>
          <% @authentik_user.discrepancies.each do |discrepancy| %>
            <tr>
              <td><strong><%= discrepancy[:field].titleize %></strong></td>
              <td><%= discrepancy[:authentik].presence || "<em class='text-muted'>empty</em>".html_safe %></td>
              <td><%= discrepancy[:user].presence || "<em class='text-muted'>empty</em>".html_safe %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex gap-2">
        <%= button_to "Accept Authentik Values", accept_changes_authentik_user_path(@authentik_user), 
            method: :post, 
            class: "btn btn-warning",
            data: { turbo: false, confirm: "This will update MemberManager with Authentik's values. Continue?" } %>
        <%= button_to "Push MemberManager Values to Authentik", push_to_authentik_authentik_user_path(@authentik_user), 
            method: :post, 
            class: "btn btn-outline-secondary",
            data: { turbo: false } %>
      </div>
    </div>
  </div>
<% end %>

<div class="card shadow-sm border-0">
  <div class="card-body">
    <h2 class="h6 mb-3">Raw Attributes</h2>
    <pre class="bg-body-secondary rounded p-3 mb-0"><code class="text-body"><%= JSON.pretty_generate(@authentik_user.raw_attributes) %></code></pre>
  </div>
</div>

<% if @authentik_user.user.nil? %>
  <!-- Link User Modal -->
  <div class="modal fade" id="linkUserModal" tabindex="-1" aria-labelledby="linkUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="linkUserModalLabel">Link User to Authentik User</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <%= form_with url: link_user_authentik_user_path(@authentik_user), method: :post, local: true do |f| %>
          <div class="modal-body">
            <p class="mb-3">Select a user to link to this Authentik user. The user's <code>authentik_id</code> will be updated.</p>
            <div class="mb-3">
              <label for="user_search" class="form-label">Search Users</label>
              <input type="text" id="user_search" class="form-control mb-2" placeholder="Type to search users…" autocomplete="off">
            </div>
            <div class="mb-3">
              <label class="form-label">Select User</label>
              <div id="user_list" class="border rounded" style="max-height: 300px; overflow-y: auto;">
                <% @all_users.each do |user| %>
                  <div class="user-item p-2 border-bottom" data-user-id="<%= user.id %>" data-user-name="<%= user.display_name.downcase %>" style="cursor: pointer;">
                    <input type="radio" name="user_id" id="user_<%= user.id %>" value="<%= user.id %>" class="form-check-input me-2" required>
                    <label for="user_<%= user.id %>" class="form-check-label mb-0" style="cursor: pointer;">
                      <%= user.display_name %>
                      <% if user.email.present? %>
                        <span class="text-muted small">(<%= user.email %>)</span>
                      <% end %>
                    </label>
                  </div>
                <% end %>
              </div>
              <div id="no_results" class="text-muted text-center p-3" style="display: none;">
                No users found matching your search.
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <%= f.submit "Link User", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <script>
    (function() {
      const modal = document.getElementById('linkUserModal');
      if (!modal) return;
      
      let searchHandler = null;
      
      function filterUsers() {
        const searchInput = document.getElementById('user_search');
        const userList = document.getElementById('user_list');
        const noResults = document.getElementById('no_results');
        
        if (!searchInput || !userList) return;
        
        const searchTerm = searchInput.value.toLowerCase().trim();
        const userItems = userList.querySelectorAll('.user-item');
        let visibleCount = 0;
        
        userItems.forEach(function(item) {
          const userName = item.getAttribute('data-user-name');
          if (userName && userName.includes(searchTerm)) {
            item.style.display = '';
            visibleCount++;
          } else {
            item.style.display = 'none';
          }
        });
        
        if (visibleCount === 0 && searchTerm !== '') {
          userList.style.display = 'none';
          if (noResults) {
            noResults.style.display = 'block';
          }
        } else {
          userList.style.display = 'block';
          if (noResults) {
            noResults.style.display = 'none';
          }
        }
      }
      
      function resetSearch() {
        const searchInput = document.getElementById('user_search');
        const userList = document.getElementById('user_list');
        const noResults = document.getElementById('no_results');
        
        if (searchInput) {
          searchInput.value = '';
        }
        if (userList) {
          const userItems = userList.querySelectorAll('.user-item');
          userItems.forEach(function(item) {
            item.style.display = '';
          });
          userList.style.display = 'block';
        }
        if (noResults) {
          noResults.style.display = 'none';
        }
      }
      
      function setupClickHandlers() {
        const userList = document.getElementById('user_list');
        if (!userList) return;
        
        const userItems = userList.querySelectorAll('.user-item');
        userItems.forEach(function(item) {
          item.addEventListener('click', function(e) {
            if (e.target.type !== 'radio' && e.target.tagName !== 'LABEL') {
              const radio = item.querySelector('input[type="radio"]');
              if (radio) {
                radio.checked = true;
              }
            }
          });
        });
      }
      
      modal.addEventListener('show.bs.modal', function() {
        resetSearch();
        
        const searchInput = document.getElementById('user_search');
        if (searchInput) {
          if (searchHandler) {
            searchInput.removeEventListener('input', searchHandler);
          }
          
          searchHandler = function() {
            filterUsers();
          };
          
          searchInput.addEventListener('input', searchHandler);
        }
        
        setupClickHandlers();
      });
      
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', function() {
          setupClickHandlers();
        });
      } else {
        setupClickHandlers();
      }
    })();
  </script>
<% end %>
