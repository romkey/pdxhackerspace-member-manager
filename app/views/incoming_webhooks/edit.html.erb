<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0">Edit Webhook: <%= @incoming_webhook.name %></h1>
  <%= link_to "&larr; Back to Incoming Webhooks".html_safe, incoming_webhooks_path, class: "text-decoration-none" %>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card shadow-sm border-0 mb-4">
      <div class="card-body">
        <% if @incoming_webhook.errors.any? %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% @incoming_webhook.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with model: @incoming_webhook, url: incoming_webhook_path(@incoming_webhook), local: true do |f| %>
          <%# Webhook URL %>
          <div class="mb-4">
            <label class="form-label fw-semibold">Webhook URL</label>
            <% base_url = @base_url.present? ? @base_url.delete_suffix('/') : '' %>
            <div class="input-group mb-1">
              <span class="input-group-text font-monospace"><%= base_url %>/webhooks/</span>
              <%= f.text_field :slug, class: "form-control font-monospace", id: "webhook-slug",
                  pattern: "[a-zA-Z0-9_-]+",
                  title: "Only letters, numbers, hyphens, and underscores" %>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <div class="form-text">Only letters, numbers, hyphens, and underscores.</div>
              <button type="button" class="btn btn-outline-secondary btn-sm" id="randomize-slug-btn"
                      title="Generate a random slug">
                <i class="bi bi-shuffle me-1"></i> Randomize
              </button>
            </div>
            <% if @base_url.blank? %>
              <div class="alert alert-warning py-2 small mt-2 mb-0">
                Set <code>MEMBER_MANAGER_BASE_URL</code> to see the full URL.
              </div>
            <% end %>

            <%# Full URL for copying (only shown when base URL is set) %>
            <% if @base_url.present? %>
              <div class="mt-2">
                <div class="input-group input-group-sm">
                  <span class="input-group-text">Full URL</span>
                  <input type="text" class="form-control font-monospace" id="full-webhook-url" readonly
                         value="<%= @incoming_webhook.webhook_url %>">
                  <button class="btn btn-outline-secondary" type="button" id="copy-url-btn"
                          title="Copy to clipboard">Copy</button>
                </div>
              </div>
            <% end %>
          </div>

          <%# Description %>
          <div class="mb-3">
            <%= f.label :description, class: "form-label fw-semibold" %>
            <%= f.text_area :description, class: "form-control", rows: 3 %>
          </div>

          <%# Enabled toggle %>
          <div class="mb-4 form-check form-switch">
            <%= f.check_box :enabled, class: "form-check-input", role: "switch" %>
            <%= f.label :enabled, "Enabled", class: "form-check-label" %>
            <div class="form-text">When disabled, requests to this webhook URL will return a 404 error.</div>
          </div>

          <div class="d-flex gap-2">
            <%= f.submit "Save Changes", class: "btn btn-primary" %>
            <%= link_to "Cancel", incoming_webhooks_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card shadow-sm border-0">
      <div class="card-header bg-body-tertiary">
        <h5 class="mb-0">Details</h5>
      </div>
      <div class="card-body">
        <dl class="mb-0">
          <dt>Name</dt>
          <dd><%= @incoming_webhook.name %></dd>

          <dt>Type</dt>
          <dd><code><%= @incoming_webhook.webhook_type %></code></dd>

          <dt>Status</dt>
          <dd>
            <% if @incoming_webhook.enabled? %>
              <span class="badge bg-success">Enabled</span>
            <% else %>
              <span class="badge bg-secondary">Disabled</span>
            <% end %>
          </dd>

          <dt>Created</dt>
          <dd><%= @incoming_webhook.created_at&.strftime('%b %d, %Y %H:%M') || 'N/A' %></dd>

          <dt>Last Updated</dt>
          <dd><%= @incoming_webhook.updated_at&.strftime('%b %d, %Y %H:%M') || 'N/A' %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>

<script>
(function() {
  var slugField = document.getElementById('webhook-slug');
  var randomizeBtn = document.getElementById('randomize-slug-btn');
  var fullUrlField = document.getElementById('full-webhook-url');
  var copyBtn = document.getElementById('copy-url-btn');
  var baseUrl = '<%= j(@base_url.present? ? @base_url.delete_suffix("/") : "") %>';

  // Randomize slug button
  if (randomizeBtn && slugField) {
    randomizeBtn.addEventListener('click', function() {
      fetch('<%= random_slug_incoming_webhooks_path %>', {
        headers: { 'Accept': 'application/json' }
      })
      .then(function(response) { return response.json(); })
      .then(function(data) {
        slugField.value = data.slug;
        updateFullUrl();
      });
    });
  }

  // Update full URL when slug changes
  if (slugField && fullUrlField) {
    slugField.addEventListener('input', updateFullUrl);
  }

  function updateFullUrl() {
    if (fullUrlField && baseUrl) {
      fullUrlField.value = baseUrl + '/webhooks/' + slugField.value;
    }
  }

  // Copy button
  if (copyBtn && fullUrlField) {
    copyBtn.addEventListener('click', function() {
      navigator.clipboard.writeText(fullUrlField.value).then(function() {
        copyBtn.textContent = 'Copied!';
        setTimeout(function() { copyBtn.textContent = 'Copy'; }, 2000);
      });
    });
  }
})();
</script>
